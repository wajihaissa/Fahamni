{% extends 'base.html.twig' %}

{% block title %}Resultat du planner de revision{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --pr-primary: #2f6fed;
            --pr-primary-strong: #1f54b8;
            --pr-text: #1f2a3d;
            --pr-muted: #5e7292;
            --pr-line: #dbe6f5;
            --pr-bg: #f4f7fc;
            --pr-card: #ffffff;
        }

        .pr-shell {
            width: min(980px, 95vw);
            margin: 96px auto 36px;
            color: var(--pr-text);
        }

        .pr-topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 12px;
        }

        .pr-links {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            flex-wrap: wrap;
        }

        .pr-link {
            text-decoration: none;
            font-size: 13px;
            font-weight: 700;
            color: #2c528a;
        }

        .pr-source {
            display: inline-flex;
            align-items: center;
            border-radius: 999px;
            border: 1px solid transparent;
            padding: 5px 10px;
            font-size: 11px;
            font-weight: 800;
            letter-spacing: 0.03em;
            text-transform: uppercase;
        }

        .pr-source-openai {
            background: #e8f8f1;
            border-color: #b6e5d0;
            color: #145942;
        }

        .pr-source-fallback {
            background: #fff6e5;
            border-color: #f2ddb1;
            color: #8b6218;
        }

        .pr-card {
            background: var(--pr-card);
            border: 1px solid var(--pr-line);
            border-radius: 16px;
            padding: 16px;
            box-shadow: 0 12px 24px rgba(25, 44, 77, 0.08);
        }

        .pr-title {
            margin: 0;
            font-size: clamp(24px, 2.4vw, 32px);
            font-weight: 900;
        }

        .pr-subtitle {
            margin: 6px 0 0;
            color: var(--pr-muted);
            font-size: 14px;
        }

        .pr-metrics {
            margin-top: 14px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 10px;
        }

        .pr-metric {
            border: 1px solid #dbe6f6;
            border-radius: 11px;
            background: #f8fbff;
            padding: 10px;
        }

        .pr-metric-label {
            margin: 0;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.04em;
            color: #607999;
            font-weight: 800;
        }

        .pr-metric-value {
            margin: 4px 0 0;
            font-size: 21px;
            font-weight: 900;
            color: #21497f;
        }

        .pr-summary {
            margin-top: 12px;
            border: 1px solid #dce6f5;
            border-radius: 12px;
            background: #f7fbff;
            padding: 10px 12px;
            color: #274970;
            font-size: 13px;
            font-weight: 700;
        }

        .pr-summary-error {
            border-color: #f1c3c8;
            background: #fff2f4;
            color: #9a2e3d;
        }

        .pr-board {
            margin-top: 14px;
            border: 1px solid #dce6f5;
            border-radius: 16px;
            background:
                linear-gradient(180deg, rgba(239, 246, 255, 0.88), rgba(255, 255, 255, 0.96)),
                #ffffff;
            padding: 12px;
        }

        .pr-progress-wrap {
            margin-top: 10px;
        }

        .pr-progress-head {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 8px;
            flex-wrap: wrap;
            margin-bottom: 8px;
        }

        .pr-progress-label {
            font-size: 13px;
            font-weight: 800;
            color: #294a79;
        }

        .pr-progress-value {
            font-size: 12px;
            color: #4a6488;
            font-weight: 700;
        }

        .pr-progress-track {
            width: 100%;
            height: 10px;
            border-radius: 999px;
            background: #e8eef8;
            border: 1px solid #d6e1f2;
            overflow: hidden;
        }

        .pr-progress-bar {
            height: 100%;
            border-radius: 999px;
            background: linear-gradient(90deg, #2f6fed 0%, #4e8cff 100%);
            transition: width 0.25s ease;
        }

        .pr-days {
            display: flex;
            gap: 8px;
            overflow-x: auto;
            padding: 2px 2px 7px;
            scrollbar-width: thin;
        }

        .pr-day-btn {
            border: 1px solid #d5e1f3;
            border-radius: 12px;
            background: #ffffff;
            min-width: 116px;
            padding: 8px 10px;
            text-align: left;
            color: #2e486d;
            cursor: pointer;
            transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
            box-shadow: 0 4px 10px rgba(25, 43, 75, 0.05);
        }

        .pr-day-btn:hover {
            border-color: #b8cceb;
            box-shadow: 0 8px 16px rgba(25, 43, 75, 0.08);
            transform: translateY(-1px);
        }

        .pr-day-btn.is-active {
            border-color: #8db0e7;
            background: #edf4ff;
            box-shadow: 0 9px 16px rgba(31, 67, 129, 0.14);
        }

        .pr-day-name {
            display: block;
            font-size: 13px;
            font-weight: 900;
        }

        .pr-day-date {
            display: block;
            margin-top: 2px;
            font-size: 11px;
            font-weight: 700;
            color: #667f9f;
        }

        .pr-day-panel {
            margin-top: 8px;
            border: 1px solid #dbe6f6;
            border-radius: 14px;
            background: #ffffff;
            padding: 10px;
            display: none;
        }

        .pr-day-panel.is-active {
            display: block;
        }

        .pr-day-head {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            gap: 8px;
            margin-bottom: 9px;
        }

        .pr-day-title {
            margin: 0;
            font-size: 16px;
            font-weight: 900;
            color: #1f3659;
        }

        .pr-day-full-date {
            margin: 0;
            font-size: 12px;
            font-weight: 700;
            color: #5f7797;
        }

        .pr-timeline {
            position: relative;
            display: grid;
            gap: 9px;
            padding-left: 18px;
        }

        .pr-timeline::before {
            content: "";
            position: absolute;
            left: 6px;
            top: 8px;
            bottom: 8px;
            border-left: 2px dashed #c6d6ee;
        }

        .pr-item {
            position: relative;
        }

        .pr-dot {
            position: absolute;
            left: -16px;
            top: 15px;
            width: 10px;
            height: 10px;
            border-radius: 999px;
            border: 2px solid #ffffff;
            box-shadow: 0 0 0 2px rgba(153, 177, 217, 0.42);
        }

        .pr-dot-1 { background: #33c4ac; }
        .pr-dot-2 { background: #4d7bee; }
        .pr-dot-3 { background: #f1a43a; }
        .pr-dot-4 { background: #8e74e7; }

        .pr-item-card {
            border: 1px solid #dae5f3;
            border-radius: 13px;
            background: #ffffff;
            padding: 9px 11px;
            box-shadow: 0 5px 12px rgba(23, 44, 79, 0.06);
        }

        .pr-item-head {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 8px;
        }

        .pr-item-subject {
            margin: 0;
            font-size: 14px;
            font-weight: 900;
            color: #223a5f;
        }

        .pr-item-phase {
            margin: 2px 0 0;
            font-size: 12px;
            color: #617b9d;
            font-weight: 600;
        }

        .pr-item-time {
            margin: 0;
            font-size: 12px;
            font-weight: 800;
            color: #2f5fa6;
            white-space: nowrap;
        }

        .pr-item-meta {
            margin-top: 8px;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 6px;
        }

        .pr-progress-check {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            border: 1px solid #d2dff3;
            border-radius: 999px;
            background: #f6f9ff;
            color: #2f4f7d;
            padding: 3px 8px;
            font-size: 11px;
            font-weight: 700;
        }

        .pr-progress-check input {
            margin: 0;
        }

        .pr-chip {
            display: inline-flex;
            align-items: center;
            border-radius: 999px;
            border: 1px solid #d4e1f4;
            background: #f3f8ff;
            color: #2c4f7d;
            padding: 3px 8px;
            font-size: 11px;
            font-weight: 700;
        }

        .pr-chip-priority {
            background: #fff2dc;
            border-color: #f1d2a0;
            color: #a16713;
        }

        .pr-empty-day {
            border: 1px dashed #d5e1f4;
            border-radius: 11px;
            padding: 10px;
            background: #f9fbff;
            color: #607898;
            font-size: 12px;
            font-weight: 700;
        }

        .pr-section {
            margin-top: 14px;
        }

        .pr-section-title {
            margin: 0 0 8px;
            font-size: 17px;
            font-weight: 900;
            color: #1f3558;
        }

        .pr-btn {
            border: 1px solid transparent;
            border-radius: 10px;
            min-height: 38px;
            padding: 8px 14px;
            font-size: 13px;
            font-weight: 800;
            cursor: pointer;
            transition: background-color 0.2s ease, box-shadow 0.2s ease;
        }

        .pr-btn-primary {
            background: var(--pr-primary);
            color: #ffffff;
        }

        .pr-btn-primary:hover {
            background: var(--pr-primary-strong);
            box-shadow: 0 9px 16px rgba(41, 75, 142, 0.23);
        }

        .pr-btn-secondary {
            background: #f5f8fe;
            border-color: #d4e1f4;
            color: #274f86;
        }

        .pr-btn-secondary:hover {
            background: #ecf3ff;
        }

        .pr-tips-workspace {
            margin-top: 10px;
            border-radius: 18px;
            padding: 14px;
            background: #e7ebdf;
            border: 1px solid #d7dec8;
            box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.35);
        }

        .pr-tips-workspace[hidden] {
            display: none;
        }

        .pr-advice-stack {
            position: relative;
            max-width: 460px;
            margin: 0 auto;
        }

        .pr-advice-stack::before,
        .pr-advice-stack::after {
            content: "";
            position: absolute;
            inset: 10px 10px -8px 10px;
            border-radius: 22px;
            background: #f6f8f2;
            border: 1px solid #e1e6d9;
            z-index: 0;
            transform: rotate(-2deg);
        }

        .pr-advice-stack::after {
            inset: 14px 14px -14px 14px;
            background: #fbfcf9;
            transform: rotate(2deg);
        }

        .pr-advice-card {
            position: relative;
            z-index: 1;
            border-radius: 24px;
            border: 1px solid #e1e6d9;
            background: #ffffff;
            padding: 16px 16px 14px;
            box-shadow: 0 16px 24px rgba(34, 44, 24, 0.16);
        }

        .pr-advice-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 8px;
            margin-bottom: 12px;
        }

        .pr-advice-progress {
            display: flex;
            align-items: center;
            gap: 6px;
            min-height: 8px;
        }

        .pr-advice-dash {
            width: 24px;
            height: 3px;
            border-radius: 999px;
            background: #d7ded0;
        }

        .pr-advice-dash.is-active {
            background: #2c3e63;
        }

        .pr-advice-close {
            width: 24px;
            height: 24px;
            border-radius: 999px;
            border: 1px solid #dde3d4;
            background: #f7f9f3;
            color: #8a9482;
            font-size: 14px;
            line-height: 1;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            padding: 0;
        }

        .pr-advice-label {
            margin: 0 0 8px;
            font-size: 11px;
            letter-spacing: 0.06em;
            font-weight: 900;
            color: #8a9581;
            text-transform: uppercase;
        }

        .pr-advice-footer {
            margin-top: 14px;
            display: flex;
            justify-content: flex-end;
            gap: 8px;
        }

        .pr-advice-back {
            border: none;
            background: transparent;
            color: #4a5771;
            font-size: 14px;
            font-weight: 700;
            padding: 8px 9px;
            border-radius: 8px;
            cursor: pointer;
        }

        .pr-advice-back:hover {
            background: #f4f7f1;
        }

        .pr-advice-next {
            border: 1px solid #b6e693;
            background: #b9f17f;
            color: #2f4f1f;
            border-radius: 9px;
            min-width: 86px;
            min-height: 36px;
            padding: 7px 14px;
            font-size: 14px;
            font-weight: 800;
            cursor: pointer;
            box-shadow: 0 6px 12px rgba(86, 126, 46, 0.2);
        }

        .pr-advice-next:hover {
            background: #c2f58f;
        }

        .pr-advice-insight {
            margin-top: 4px;
            border: 1px solid #d8e1c9;
            border-radius: 11px;
            background: #f9fcf3;
            padding: 10px 11px;
        }

        .pr-advice-insight-title {
            margin: 0 0 4px;
            font-size: 11px;
            letter-spacing: 0.06em;
            font-weight: 900;
            color: #6a7a58;
            text-transform: uppercase;
        }

        .pr-advice-insight-text {
            margin: 0;
            font-size: 13px;
            line-height: 1.45;
            color: #2f415f;
            font-weight: 700;
        }

        .pr-reminders {
            display: grid;
            gap: 7px;
        }

        .pr-reminder {
            border-radius: 10px;
            border: 1px solid #d7e2f5;
            background: #f3f7ff;
            color: #2a4b79;
            padding: 8px 10px;
            font-size: 12px;
            font-weight: 700;
        }

        .pr-toolbar {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 8px;
            flex-wrap: wrap;
        }

        .pr-toolbar-right {
            display: inline-flex;
            gap: 8px;
            align-items: center;
            flex-wrap: wrap;
        }

        .pr-history {
            margin-top: 14px;
            border: 1px solid #dbe6f5;
            border-radius: 12px;
            background: #f8fbff;
            padding: 11px;
        }

        .pr-history-list {
            display: grid;
            gap: 7px;
            margin-top: 8px;
        }

        .pr-history-item {
            border: 1px solid #d2e0f3;
            border-radius: 10px;
            background: #ffffff;
            padding: 8px 9px;
            display: flex;
            justify-content: space-between;
            gap: 8px;
            align-items: center;
            flex-wrap: wrap;
        }

        .pr-history-item-label {
            margin: 0;
            font-size: 12px;
            font-weight: 700;
            color: #2a456f;
        }

        .pr-history-item-actions {
            display: inline-flex;
            gap: 6px;
        }

        .pr-empty {
            border-radius: 12px;
            border: 1px dashed #d6e2f4;
            background: #f8fbff;
            color: #607898;
            padding: 12px;
            font-size: 13px;
            font-weight: 700;
        }

        @media (max-width: 820px) {
            .pr-shell {
                margin-top: 84px;
                width: min(96vw, 980px);
            }

            .pr-card {
                padding: 13px;
            }

            .pr-metrics {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (() => {
            const initPlannerResult = () => {
                const tabs = Array.from(document.querySelectorAll('[data-day-tab]'));
                const panels = Array.from(document.querySelectorAll('[data-day-panel]'));
                const tipsToggleBtn = document.getElementById('prTipsToggle');
                const tipsPanel = document.getElementById('prTipsPanel');
                const adviceProgress = document.getElementById('prAdviceProgress');
                const adviceLabel = document.getElementById('prAdviceLabel');
                const adviceBack = document.getElementById('prAdviceBack');
                const adviceNext = document.getElementById('prAdviceNext');
                const adviceClose = document.getElementById('prAdviceClose');
                const adviceInsight = document.getElementById('prAdviceInsightText');

                if (tabs.length > 0 && panels.length > 0) {
                    tabs.forEach((tab) => {
                        tab.addEventListener('click', () => {
                            const target = tab.getAttribute('data-day-tab');
                            tabs.forEach((item) => item.classList.remove('is-active'));
                            panels.forEach((panel) => {
                                const isTarget = panel.getAttribute('data-day-panel') === target;
                                panel.classList.toggle('is-active', isTarget);
                                panel.hidden = !isTarget;
                            });
                            tab.classList.add('is-active');
                        });
                    });
                }

                const tips = (() => {
                    if (!tipsPanel) {
                        return [];
                    }
                    try {
                        const parsed = JSON.parse(tipsPanel.dataset.tips || '[]');
                        return Array.isArray(parsed)
                            ? parsed.map((tip) => String(tip).trim()).filter((tip) => tip.length > 0)
                            : [];
                    } catch (error) {
                        return [];
                    }
                })();
                let adviceIndex = 0;

                const setTipsVisible = (visible) => {
                    if (!tipsPanel || !tipsToggleBtn) {
                        return;
                    }
                    if (visible) {
                        tipsPanel.removeAttribute('hidden');
                        tipsToggleBtn.textContent = 'Masquer conseils Fahamni';
                    } else {
                        tipsPanel.setAttribute('hidden', 'hidden');
                        tipsToggleBtn.textContent = 'Conseil par Fahamni';
                    }
                };

                const renderAdviceCard = () => {
                    if (!tipsPanel || !adviceProgress || !adviceLabel || !adviceInsight || tips.length === 0) {
                        return;
                    }

                    if (adviceIndex < 0) {
                        adviceIndex = 0;
                    }
                    if (adviceIndex >= tips.length) {
                        adviceIndex = tips.length - 1;
                    }

                    adviceLabel.textContent = `Conseil ${String(adviceIndex + 1).padStart(2, '0')}`;
                    adviceInsight.textContent = tips[adviceIndex];

                    adviceProgress.innerHTML = '';
                    tips.forEach((_, index) => {
                        const dash = document.createElement('span');
                        dash.className = `pr-advice-dash${index === adviceIndex ? ' is-active' : ''}`;
                        adviceProgress.appendChild(dash);
                    });

                    if (adviceBack) {
                        adviceBack.disabled = adviceIndex <= 0;
                    }
                    if (adviceNext) {
                        adviceNext.textContent = adviceIndex >= tips.length - 1 ? 'Terminer' : 'Suivant';
                    }
                };

                if (adviceBack) {
                    adviceBack.addEventListener('click', () => {
                        adviceIndex = Math.max(0, adviceIndex - 1);
                        renderAdviceCard();
                    });
                }

                if (adviceNext) {
                    adviceNext.addEventListener('click', () => {
                        if (adviceIndex >= tips.length - 1) {
                            setTipsVisible(false);
                            return;
                        }
                        adviceIndex = Math.min(tips.length - 1, adviceIndex + 1);
                        renderAdviceCard();
                    });
                }

                if (adviceClose) {
                    adviceClose.addEventListener('click', () => {
                        setTipsVisible(false);
                    });
                }

                if (tipsToggleBtn && tipsPanel) {
                    tipsToggleBtn.addEventListener('click', () => {
                        const isHidden = tipsPanel.hasAttribute('hidden');
                        if (isHidden) {
                            setTipsVisible(true);
                            renderAdviceCard();
                        } else {
                            setTipsVisible(false);
                        }
                    });
                }
            };

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initPlannerResult, { once: true });
            } else {
                initPlannerResult();
            }
        })();
    </script>
{% endblock %}

{% block body %}
    {% set source = plannerData.source|default('fallback') %}
    {% set sourceLabel = (source == 'openai' or source == 'openai_service') ? 'Source IA' : 'Mode secours' %}
    {% set metrics = plannerData.metrics is defined and plannerData.metrics is iterable ? plannerData.metrics : {} %}
    {% set tips = plannerData.tips is defined and plannerData.tips is iterable ? plannerData.tips : [] %}
    {% set reminders = plannerData.reminders is defined and plannerData.reminders is iterable ? plannerData.reminders : [] %}
    {% set hasPlanner = plannerDays is not empty %}
    {% set hasSavedPlanner = planner is defined and planner and planner.id %}
    {% set completionRate = hasSavedPlanner ? planner.completionRate|default(0) : 0 %}
    {% set difficultyLevel = requestData.difficultyLevel|default('medium') %}
    {% set difficultyLabel = difficultyLevel == 'easy' ? 'Facile' : (difficultyLevel == 'hard' ? 'Difficile' : 'Moyen') %}

    <div class="pr-shell">
        <div class="pr-topbar">
            <div class="pr-links">
                <a class="pr-link" href="{{ path('app_seance_revision') }}">Retour a Find Tutors</a>
                <a class="pr-link" href="{{ path('app_seance_revision_planner') }}">Modifier les parametres</a>
            </div>
            <span class="pr-source {{ (source == 'openai' or source == 'openai_service') ? 'pr-source-openai' : 'pr-source-fallback' }}">
                {{ sourceLabel }}
            </span>
        </div>

        <section class="pr-card">
            <h1 class="pr-title">Resultat du planner de revision</h1>
            <p class="pr-subtitle">
                Examen: {{ requestData.examDate ?: 'N/A' }} |
                Matiere ciblee: {{ requestData.focusSubject ?: 'Non specifiee' }} |
                Niveau: {{ difficultyLabel }}
            </p>

            <div class="pr-metrics">
                <div class="pr-metric">
                    <p class="pr-metric-label">Sessions</p>
                    <p class="pr-metric-value">{{ plannerData.planEntries is defined and plannerData.planEntries is iterable ? plannerData.planEntries|length : 0 }}</p>
                </div>
                <div class="pr-metric">
                    <p class="pr-metric-label">Heures totales</p>
                    <p class="pr-metric-value">{{ metrics.totalHours|default(0) }}</p>
                </div>
                <div class="pr-metric">
                    <p class="pr-metric-label">Intensite</p>
                    <p class="pr-metric-value">{{ metrics.intensityScore|default(0) }}%</p>
                </div>
                <div class="pr-metric">
                    <p class="pr-metric-label">Jours planifies</p>
                    <p class="pr-metric-value">{{ plannerDays|length }}</p>
                </div>
                <div class="pr-metric">
                    <p class="pr-metric-label">Progression</p>
                    <p class="pr-metric-value">{{ completionRate|number_format(1, '.', ' ') }}%</p>
                </div>
            </div>

            {% if plannerData.error is defined and plannerData.error %}
                <div class="pr-summary pr-summary-error">{{ plannerData.error }}</div>
            {% elseif plannerData.summary is defined and plannerData.summary %}
                <div class="pr-summary">{{ plannerData.summary }}</div>
            {% endif %}

            <div class="pr-progress-wrap">
                <div class="pr-progress-head">
                    <span class="pr-progress-label">Suivi de progression</span>
                    <span class="pr-progress-value">
                        {{ hasSavedPlanner ? planner.completedEntries|default(0) : 0 }}
                        /
                        {{ hasSavedPlanner ? planner.totalEntries|default(0) : (plannerData.planEntries is defined and plannerData.planEntries is iterable ? plannerData.planEntries|length : 0) }}
                        sessions terminees
                    </span>
                </div>
                <div class="pr-progress-track" aria-hidden="true">
                    <div class="pr-progress-bar" style="width: {{ completionRate|default(0) }}%;"></div>
                </div>
            </div>

            {% if hasPlanner %}
                <form method="post" action="{{ hasSavedPlanner ? path('app_seance_revision_planner_progress', {id: planner.id}) : '#' }}">
                    {% if hasSavedPlanner %}
                        <input type="hidden" name="_token" value="{{ csrf_token('planner_progress_' ~ planner.id) }}">
                    {% endif %}
                    <section class="pr-board">
                    <div class="pr-days">
                        {% for day in plannerDays %}
                            <button type="button" class="pr-day-btn {{ loop.first ? 'is-active' : '' }}" data-day-tab="{{ loop.index0 }}">
                                <span class="pr-day-name">Jour {{ loop.index }}</span>
                                <span class="pr-day-date">{{ day.shortLabel }}</span>
                            </button>
                        {% endfor %}
                    </div>

                    {% for day in plannerDays %}
                        <section class="pr-day-panel {{ loop.first ? 'is-active' : '' }}" data-day-panel="{{ loop.index0 }}" {% if not loop.first %}hidden{% endif %}>
                            <div class="pr-day-head">
                                <h3 class="pr-day-title">Jour {{ loop.index }}</h3>
                                <p class="pr-day-full-date">{{ day.fullLabel }}</p>
                            </div>

                            {% if day.entries is empty %}
                                <div class="pr-empty-day">Aucune session planifiee pour ce jour.</div>
                            {% else %}
                                <div class="pr-timeline">
                                    {% for entry in day.entries %}
                                        <article class="pr-item">
                                            <span class="pr-dot pr-dot-{{ (loop.index0 % 4) + 1 }}"></span>
                                            <div class="pr-item-card">
                                                <div class="pr-item-head">
                                                    <div>
                                                        <p class="pr-item-subject">{{ entry.subject }}</p>
                                                        <p class="pr-item-phase">{{ entry.phase }}</p>
                                                    </div>
                                                    <p class="pr-item-time">{{ entry.startClock }} - {{ entry.endClock }}</p>
                                                </div>
                                                <div class="pr-item-meta">
                                                    <span class="pr-chip">{{ entry.durationMin }} min</span>
                                                    {% if entry.priority == 'Haute' %}
                                                        <span class="pr-chip pr-chip-priority">Priorite haute</span>
                                                    {% endif %}
                                                    {% if hasSavedPlanner %}
                                                        <label class="pr-progress-check">
                                                            <input type="checkbox" name="completedEntries[]" value="{{ entry.entryId }}" {% if entry.isCompleted %}checked{% endif %}>
                                                            Terminee
                                                        </label>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </article>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </section>
                    {% endfor %}
                        <div class="pr-toolbar">
                            <div class="pr-toolbar-right">
                                {% if hasSavedPlanner %}
                                    <button class="pr-btn pr-btn-primary" type="submit">Enregistrer progression</button>
                                    <a class="pr-btn pr-btn-secondary" href="{{ path('app_seance_revision_planner_export_pdf', {id: planner.id}) }}">Exporter PDF</a>
                                {% endif %}
                            </div>
                        </div>
                    </section>
                </form>
            {% else %}
                <div class="pr-section">
                    <div class="pr-empty">Impossible de generer un planning pour le moment. Ajuste la date puis relance la generation.</div>
                </div>
            {% endif %}

            <section class="pr-section">
                <h2 class="pr-section-title">Conseils IA</h2>
                <button id="prTipsToggle" class="pr-btn pr-btn-secondary" type="button" {% if tips is empty %}disabled{% endif %}>
                    {{ tips is empty ? 'Aucun conseil Fahamni' : 'Conseil par Fahamni' }}
                </button>

                {% if tips is not empty %}
                    <div id="prTipsPanel" class="pr-tips-workspace" data-tips="{{ tips|json_encode|e('html_attr') }}" hidden>
                        <div class="pr-advice-stack">
                            <article class="pr-advice-card">
                                <div class="pr-advice-top">
                                    <div id="prAdviceProgress" class="pr-advice-progress" aria-hidden="true"></div>
                                    <button id="prAdviceClose" class="pr-advice-close" type="button" aria-label="Fermer les conseils">x</button>
                                </div>

                                <p id="prAdviceLabel" class="pr-advice-label">Conseil 01</p>

                                <div class="pr-advice-footer">
                                    <button id="prAdviceBack" class="pr-advice-back" type="button">Precedent</button>
                                    <button id="prAdviceNext" class="pr-advice-next" type="button">Suivant</button>
                                </div>

                                <div class="pr-advice-insight">
                                    <p class="pr-advice-insight-title">Conseil par Fahamni</p>
                                    <p id="prAdviceInsightText" class="pr-advice-insight-text"></p>
                                </div>
                            </article>
                        </div>
                    </div>
                {% endif %}
            </section>

            <section class="pr-section">
                <h2 class="pr-section-title">Rappels</h2>
                {% if reminders is empty %}
                    <div class="pr-empty">Aucun rappel disponible.</div>
                {% else %}
                    <div class="pr-reminders">
                        {% for reminder in reminders|slice(0, 12) %}
                            <div class="pr-reminder">
                                {{ reminder.at|date('d/m/Y H:i') }} - {{ reminder.label }}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </section>

            <section class="pr-section">
                <a class="pr-btn pr-btn-primary" href="{{ path('app_seance_revision_planner') }}">Generer un autre planning</a>
            </section>

            {% if historyPlanners is defined and historyPlanners is not empty %}
                <section class="pr-history">
                    <h2 class="pr-section-title">Historique rapide</h2>
                    <div class="pr-history-list">
                        {% for historyPlanner in historyPlanners|slice(0, 8) %}
                            <article class="pr-history-item">
                                <p class="pr-history-item-label">
                                    {{ historyPlanner.examDate|date('d/m/Y') }}
                                    {% if historyPlanner.focusSubject %}
                                        - {{ historyPlanner.focusSubject }}
                                    {% endif %}
                                    ({{ historyPlanner.completionRate|number_format(1, '.', ' ') }}%)
                                </p>
                                <div class="pr-history-item-actions">
                                    <a class="pr-btn pr-btn-secondary" href="{{ path('app_seance_revision_planner_show', {id: historyPlanner.id}) }}">Ouvrir</a>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </section>
            {% endif %}
        </section>
    </div>
{% endblock %}
