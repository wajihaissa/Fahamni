{{ parent() }}
<script>
// === IMAGE PREVIEW ===
let selectedFiles = [];

function previewImages(input) {
    const preview = document.getElementById('imagePreview');
    preview.innerHTML = '';
    selectedFiles = Array.from(input.files);

    selectedFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
            const div = document.createElement('div');
            div.className = 'image-preview-item';

            const img = document.createElement('img');
            img.src = e.target.result;
            img.alt = 'Preview ' + (index + 1);

            const btn = document.createElement('button');
            btn.className = 'remove-image-btn';
            btn.innerHTML = '<i class="fas fa-times"></i>';
            btn.type = 'button';
            btn.onclick = () => removeImage(index);

            div.appendChild(img);
            div.appendChild(btn);
            preview.appendChild(div);
        };
        reader.readAsDataURL(file);
    });

    updateSteps();
}

function removeImage(index) {
    selectedFiles.splice(index, 1);
    const dt = new DataTransfer();
    selectedFiles.forEach(f => dt.items.add(f));
    document.querySelector('input[type="file"]').files = dt.files;
    previewImages(document.querySelector('input[type="file"]'));
}

// === STEP TRACKER ===
function updateSteps() {
    const titre = document.getElementById('titreInput')?.value.trim() || '';
    const category = document.querySelector('select[name="blog[category]"]')?.value || '';
    const content = document.getElementById('contentInput')?.value.trim() || '';

    const steps = [
        titre.length > 0,
        category !== '',
        content.length > 0
    ];

    const dots = document.querySelectorAll('.step-dot');
    const items = document.querySelectorAll('.step-item');
    const lines = document.querySelectorAll('.step-line');

    let lastDone = -1;
    steps.forEach((done, i) => {
        if (done) lastDone = i;
        dots[i].classList.toggle('done', done);
        items[i].classList.toggle('done', done);
        if (done) {
            dots[i].innerHTML = '<i class="fas fa-check" style="font-size:11px"></i>';
        } else {
            dots[i].textContent = i + 1;
        }
    });

    // Active = first incomplete
    const firstIncomplete = steps.indexOf(false);
    dots.forEach((d, i) => {
        d.classList.toggle('active', i === firstIncomplete && !steps[i]);
        items[i].classList.toggle('active', i === firstIncomplete && !steps[i]);
    });

    lines.forEach((l, i) => {
        l.classList.toggle('filled', steps[i]);
    });
}

// === CHAR COUNTERS ===
function setupCounters() {
    const titreInput = document.getElementById('titreInput');
    const contentInput = document.getElementById('contentInput');
    const titreCounter = document.getElementById('titreCounter');
    const contentCounter = document.getElementById('contentCounter');

    if (titreInput && titreCounter) {
        titreInput.addEventListener('input', function() {
            const len = this.value.length;
            titreCounter.textContent = len + ' / 255';
            titreCounter.classList.toggle('warning', len > 220 && len <= 255);
            titreCounter.classList.toggle('error', len > 255);
            if (len > 0 && len <= 255) {
                this.classList.add('valid');
                this.classList.remove('is-invalid');
            } else this.classList.remove('valid');
            updateSteps();
        });
    }

    if (contentInput && contentCounter) {
        contentInput.addEventListener('input', function() {
            const len = this.value.length;
            contentCounter.textContent = len + ' car.';
            if (len > 0) {
                this.classList.add('valid');
                this.classList.remove('is-invalid');
            } else this.classList.remove('valid');
            updateSteps();
        });
    }
}


// === SUBMIT LOADING ===
function setupSubmitLoading() {
    const form = document.getElementById('articleForm');
    if (!form) return;
    form.addEventListener('submit', function() {
        document.getElementById('loadingOverlay')?.classList.add('active');
    });
}

// === INIT ===
document.addEventListener('DOMContentLoaded', function() {
    setupCounters();
    setupSubmitLoading();
    updateSteps();

    // Trigger initial counters
    ['titreInput','contentInput'].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.dispatchEvent(new Event('input'));
    });
});

// === AI GENERATE ===
document.addEventListener('DOMContentLoaded', function() {
    var btn = document.getElementById('aiGenerateBtn');
    var msg = document.getElementById('aiGenerateMsg');
    var generateUrl = '{{ path('app_blog_generate_ai') }}';

    if (!btn) return;

    btn.addEventListener('click', function() {
        var titreInput = document.getElementById('titreInput') || document.getElementById('blog_titre');
        var contentInput = document.getElementById('contentInput') || document.getElementById('blog_content');
        var categorySelect = document.querySelector('[id$="_category"]');

        var title = titreInput ? titreInput.value.trim() : '';
        var category = categorySelect ? categorySelect.value : '';

        // Reset message
        msg.className = 'ai-generate-msg';
        msg.textContent = '';

        if (!title) {
            msg.className = 'ai-generate-msg is-error';
            msg.textContent = 'Veuillez saisir un titre avant de générer le contenu.';
            if (titreInput) titreInput.focus();
            return;
        }

        // Loading state
        btn.classList.add('is-loading');
        btn.disabled = true;
        btn.querySelector('.ai-btn-text').textContent = 'Génération en cours...';

        fetch(generateUrl, {
            method: 'POST',
            credentials: 'same-origin',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ title: title, category: category })
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
            btn.classList.remove('is-loading');
            btn.disabled = false;
            btn.querySelector('.ai-btn-text').textContent = 'Générer contenu avec AI';

            if (data.error) {
                msg.className = 'ai-generate-msg is-error';
                msg.textContent = data.error;
                return;
            }

            if (data.content && contentInput) {
                // Typewriter effect
                contentInput.value = '';
                var text = data.content;
                var i = 0;
                var speed = 5;
                function typeWriter() {
                    if (i < text.length) {
                        var chunk = text.substring(i, Math.min(i + 3, text.length));
                        contentInput.value += chunk;
                        i += 3;
                        contentInput.scrollTop = contentInput.scrollHeight;
                        setTimeout(typeWriter, speed);
                    } else {
                        contentInput.dispatchEvent(new Event('input'));
                        msg.className = 'ai-generate-msg is-success';
                        msg.textContent = 'Contenu généré avec succès ! Vous pouvez le modifier avant de publier.';
                    }
                }
                typeWriter();
            }
        })
        .catch(function() {
            btn.classList.remove('is-loading');
            btn.disabled = false;
            btn.querySelector('.ai-btn-text').textContent = 'Générer contenu avec AI';
            msg.className = 'ai-generate-msg is-error';
            msg.textContent = 'Erreur de connexion. Veuillez réessayer.';
        });
    });
});

// === SPELL CHECK (titre + contenu) ===
document.addEventListener('DOMContentLoaded', function() {
    var scBtn = document.getElementById('spellCheckBtn');
    var scResult = document.getElementById('spellCheckResult');
    var correctUrl = '{{ path('app_blog_correct_spelling') }}';

    if (!scBtn) return;

    scBtn.addEventListener('click', function() {
        var titreInput = document.getElementById('titreInput') || document.getElementById('blog_titre');
        var contentInput = document.getElementById('contentInput') || document.getElementById('blog_content');

        var title = titreInput ? titreInput.value.trim() : '';
        var text = contentInput ? contentInput.value.trim() : '';

        scResult.className = 'spell-check-result';
        scResult.innerHTML = '';

        if (!title && !text) {
            scResult.className = 'spell-check-result is-visible is-error';
            scResult.innerHTML = '<i class="fas fa-exclamation-circle"></i> Aucun texte à corriger. Rédigez un titre ou du contenu d\'abord.';
            return;
        }

        scBtn.classList.add('is-loading');
        scBtn.disabled = true;
        scBtn.querySelector('.sc-btn-text').textContent = 'Correction en cours...';

        fetch(correctUrl, {
            method: 'POST',
            credentials: 'same-origin',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ title: title, text: text })
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
            scBtn.classList.remove('is-loading');
            scBtn.disabled = false;
            scBtn.querySelector('.sc-btn-text').textContent = 'Corriger les fautes';

            if (data.error) {
                scResult.className = 'spell-check-result is-visible is-error';
                scResult.innerHTML = '<i class="fas fa-exclamation-circle"></i> ' + data.error;
                return;
            }

            if (!data.hasChanges) {
                scResult.className = 'spell-check-result is-visible no-fixes';
                scResult.innerHTML = '<i class="fas fa-check-circle"></i> <strong>Parfait !</strong> Aucune faute détectée.';
                return;
            }

            // Appliquer les corrections au titre
            if (titreInput && data.titleCorrected) {
                titreInput.value = data.titleCorrected;
                titreInput.dispatchEvent(new Event('input'));
            }
            // Appliquer les corrections au contenu
            if (contentInput && data.contentCorrected) {
                contentInput.value = data.contentCorrected;
                contentInput.dispatchEvent(new Event('input'));
            }

            var html = '<div class="spell-fix-summary">';
            html += '<span class="spell-fix-count">' + data.fixCount + '</span>';
            html += '<span class="spell-fix-label">' + data.fixCount + ' correction' + (data.fixCount > 1 ? 's' : '') + ' appliquée' + (data.fixCount > 1 ? 's' : '') + '</span>';
            html += '</div>';
            html += '<ul class="spell-fix-list">';
            data.fixes.forEach(function(fix) {
                var parts = fix.split(' → ');
                if (parts.length === 2) {
                    html += '<li><i class="fas fa-check fix-icon"></i> <span class="fix-wrong">' + parts[0] + '</span> <i class="fas fa-arrow-right fix-arrow"></i> <span class="fix-right">' + parts[1] + '</span></li>';
                } else {
                    html += '<li><i class="fas fa-check fix-icon"></i> ' + fix + '</li>';
                }
            });
            html += '</ul>';

            scResult.className = 'spell-check-result is-visible has-fixes';
            scResult.innerHTML = html;
        })
        .catch(function() {
            scBtn.classList.remove('is-loading');
            scBtn.disabled = false;
            scBtn.querySelector('.sc-btn-text').textContent = 'Corriger les fautes';
            scResult.className = 'spell-check-result is-visible is-error';
            scResult.innerHTML = '<i class="fas fa-exclamation-circle"></i> Erreur de connexion.';
        });
    });
});
</script>
