            // Appliquer les corrections au titre
            if (titreInput && data.titleCorrected) {
                titreInput.value = data.titleCorrected;
                titreInput.dispatchEvent(new Event('input'));
            }
            // Appliquer les corrections au contenu
            if (contentInput && data.contentCorrected) {
                contentInput.value = data.contentCorrected;
                contentInput.dispatchEvent(new Event('input'));
            }

            var html = '<div class="spell-fix-summary">';
            html += '<span class="spell-fix-count">' + data.fixCount + '</span>';
            html += '<span class="spell-fix-label">' + data.fixCount + ' correction' + (data.fixCount > 1 ? 's' : '') + ' appliquée' + (data.fixCount > 1 ? 's' : '') + '</span>';
            html += '</div>';
            html += '<ul class="spell-fix-list">';
            data.fixes.forEach(function(fix) {
                var parts = fix.split(' → ');
                if (parts.length === 2) {
                    html += '<li><i class="fas fa-check fix-icon"></i> <span class="fix-wrong">' + parts[0] + '</span> <i class="fas fa-arrow-right fix-arrow"></i> <span class="fix-right">' + parts[1] + '</span></li>';
                } else {
                    html += '<li><i class="fas fa-check fix-icon"></i> ' + fix + '</li>';
                }
            });
            html += '</ul>';

            scResult.className = 'spell-check-result is-visible has-fixes';
            scResult.innerHTML = html;
        })
        .catch(function() {
            scBtn.classList.remove('is-loading');
            scBtn.disabled = false;
            scBtn.querySelector('.sc-btn-text').textContent = 'Corriger les fautes';
            scResult.className = 'spell-check-result is-visible is-error';
            scResult.innerHTML = '<i class="fas fa-exclamation-circle"></i> Erreur de connexion.';
        });
    });
});
</script>
{% endblock %}

{% block body %}
<!-- Animated Background -->
<div class="page-bg">
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>
</div>

<div class="page-wrapper">
    <div class="form-container">
        <!-- Header -->
        <div class="form-header">
            <div class="icon-circle">
                <i class="fas fa-edit"></i>
            </div>
            <h1>Modifier l'article</h1>
            <p>{{ blog.titre }}</p>
        </div>

        <!-- Main Card -->
        <div class="glass-card">
            <div class="card-inner">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                {# Global errors #}
                {% if form.vars.errors|length > 0 %}
                <div class="global-error">
                    <strong><i class="fas fa-exclamation-triangle"></i> Le formulaire contient des erreurs :</strong>
                    <ul>
                        {% for error in form.vars.errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

                {# INFO BANNER #}
                <div class="info-banner">
                    <div class="info-item">
                        <div class="info-icon amber-bg"><i class="fas fa-calendar-plus"></i></div>
                        <div>
                            <div class="info-label">Date de création</div>
                            <div class="info-value">{{ blog.createdAt|date('d/m/Y à H:i') }}</div>
                        </div>
                    </div>
                    <div class="info-item">
                        {% if blog.publishedAt %}
                        <div class="info-icon green-bg"><i class="fas fa-check-circle"></i></div>
                        <div>
                            <div class="info-label">Date de publication</div>
                            <div class="info-value">{{ blog.publishedAt|date('d/m/Y à H:i') }}</div>
                        </div>
                        {% else %}
                        <div class="info-icon indigo-bg"><i class="fas fa-file-alt"></i></div>
                        <div>
                            <div class="info-label">Statut actuel</div>
                            <div class="info-value">Brouillon</div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                {# TITRE #}
                <div class="form-section">
                    <label class="field-label">
                        <span class="label-icon amber"><i class="fas fa-heading"></i></span>
                        Titre de l'article
                    </label>
                    {{ form_widget(form.titre, {'attr': {
                        'class': 'field-input input-lg' ~ (form.titre.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Titre de l\'article'
                    }}) }}
                    {% for error in form.titre.vars.errors %}
                        <div class="field-error"><i class="fas fa-exclamation-circle"></i> {{ error.message }}</div>
                    {% endfor %}
                </div>

                {# CATEGORIE #}
                {% if form.category is defined %}
                <div class="form-section">
                    <label class="field-label">
                        <span class="label-icon red"><i class="fas fa-tag"></i></span>
                        Catégorie
                    </label>
                    {{ form_widget(form.category, {'attr': {
                        'class': 'field-select' ~ (form.category.vars.errors|length > 0 ? ' is-invalid' : '')
                    }}) }}
                    {% for error in form.category.vars.errors %}
                        <div class="field-error"><i class="fas fa-exclamation-circle"></i> {{ error.message }}</div>
                    {% endfor %}
                </div>
                {% endif %}

                <div class="form-divider"></div>

                {# CONTENU #}
                <div class="form-section">
                    <label class="field-label">
                        <span class="label-icon green"><i class="fas fa-align-left"></i></span>
                        Contenu
                    </label>
                    {{ form_widget(form.content, {'attr': {
                        'class': 'field-input' ~ (form.content.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'rows': 10,
                        'placeholder': 'Contenu de l\'article'
                    }}) }}
                    {% for error in form.content.vars.errors %}
                        <div class="field-error"><i class="fas fa-exclamation-circle"></i> {{ error.message }}</div>
                    {% endfor %}
                    <div class="ai-tools-card">
                        <div class="ai-tools-header">
                            <span class="ai-tools-badge"><i class="fas fa-microchip"></i> Outils IA</span>
                            <span class="ai-tools-title">Assistants intelligents</span>
                        </div>
                        <div class="ai-tools-btns">
                            <button type="button" class="ai-generate-btn" id="aiGenerateBtn">
                                <i class="fas fa-wand-magic-sparkles ai-icon"></i>
                                <i class="fas fa-circle-notch fa-spin ai-spinner"></i>
                                <span class="ai-btn-text">Régénérer contenu avec AI</span>
                            </button>
                            <button type="button" class="spell-check-btn" id="spellCheckBtn">
                                <i class="fas fa-spell-check sc-icon"></i>
                                <i class="fas fa-circle-notch fa-spin sc-spinner"></i>
                                <span class="sc-btn-text">Corriger les fautes</span>
                            </button>
                        </div>
                        <div class="ai-generate-msg" id="aiGenerateMsg"></div>
                        <div class="spell-check-result" id="spellCheckResult"></div>
                    </div>
                </div>

                <div class="form-divider"></div>

                {# EXISTING IMAGES #}
                {% if blog.images and blog.images|length > 0 %}
                <div class="form-section">
                    <label class="field-label">
                        <span class="label-icon purple"><i class="fas fa-images"></i></span>
                        Images actuelles
                    </label>
                    <div class="images-grid">
                        {% for image in blog.images %}
                        <div class="image-thumb">
                            <img src="/uploads/images/{{ image }}" alt="Image {{ loop.index }}">
                            <span class="thumb-badge">{{ loop.index }}</span>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="field-hint">
                        <i class="fas fa-info-circle"></i> Ces images sont actuellement associées à l'article
                    </div>
                </div>

                <div class="form-divider"></div>
                {% endif %}

                {# NEW IMAGES #}
                <div class="form-section">
                    <label class="field-label">
                        <span class="label-icon indigo"><i class="fas fa-plus-circle"></i></span>
                        Ajouter des images
                    </label>
                    <div class="upload-zone">
                        <div class="upload-icon"><i class="fas fa-cloud-upload-alt"></i></div>
                        <div class="upload-text">Cliquez ou glissez vos images ici</div>
                        <div class="upload-hint">JPG, PNG, GIF, WEBP — max 5 Mo par image</div>
                        {{ form_widget(form.images, {'attr': {
                            'accept': 'image/*',
                            'onchange': 'previewImages(this)'
                        }}) }}
                    </div>
                    {% for error in form.images.vars.errors %}
                        <div class="field-error"><i class="fas fa-exclamation-circle"></i> {{ error.message }}</div>
                    {% endfor %}
                    <div id="imagePreview"></div>
                </div>

                <div class="form-divider"></div>

                {# STATUT #}
                <div class="form-section">
                    <label class="field-label">
                        <span class="label-icon amber"><i class="fas fa-toggle-on"></i></span>
                        Statut de publication
                    </label>
                    {{ form_widget(form.status, {'attr': {
                        'class': 'field-select' ~ (form.status.vars.errors|length > 0 ? ' is-invalid' : '')
                    }}) }}
                    {% for error in form.status.vars.errors %}
                        <div class="field-error"><i class="fas fa-exclamation-circle"></i> {{ error.message }}</div>
                    {% endfor %}
                </div>

                <div class="form-divider"></div>

                {# ACTIONS #}
                <div class="form-actions">
                    <a href="{{ path('app_blog_index') }}" class="btn-cancel">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                    <button type="submit" class="btn-save">
                        <i class="fas fa-save"></i>
                        <span>Enregistrer</span>
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
