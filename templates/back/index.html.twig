                            </div>
                            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Name</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${userName}</p>
                                </div>
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Email</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${emailCell ? emailCell.textContent.trim() : '-'}</p>
                                </div>
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Role</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${roleCell ? roleCell.textContent.trim() : '-'}</p>
                                </div>
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Status</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${statusCell ? statusCell.textContent.trim() : '-'}</p>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    
                } else if (button.classList.contains('btn-delete')) {
                    e.preventDefault();
                    if (confirm('Are you sure you want to delete this user?')) {
                        const deleteForm = button.closest('form');
                        if (deleteForm) submitUsersFormAjax(deleteForm);
                    }
                }
            });

            // Smooth AJAX submit for Users actions (activate/deactivate, accept/decline, delete)
            document.addEventListener('submit', function(e) {
                const form = e.target;
                if (!(form instanceof HTMLFormElement)) return;
                if (!form.closest('#users')) return;

                const action = form.getAttribute('action') || '';
                const isUsersAction = isUsersActionUrl(action);
                if (!isUsersAction) return;

                e.preventDefault();
                submitUsersFormAjax(form);
            });

            // Search functionality
            const searchInput = document.querySelector('.search-bar input');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    console.log('Searching for:', searchTerm);
                });
            }

            // Notification functionality
            const notificationIcon = document.querySelector('.notification-icon');
            if (notificationIcon) {
                notificationIcon.addEventListener('click', function() {
                    console.log('Notifications clicked');
                    alert('Notifications functionality would be implemented here');
                });
            }

            // Admin profile dropdown
            const adminProfile = document.querySelector('.admin-mini-profile');
            if (adminProfile) {
                adminProfile.addEventListener('click', function() {
                    console.log('Admin profile clicked');
                    alert('Profile dropdown would be implemented here');
                });
            }

            // Animate statistics cards on page load
            function animateStats() {
                const statCards = document.querySelectorAll('.stat-card');
                statCards.forEach((card, index) => {
                    setTimeout(() => {
                        card.style.opacity = '0';
                        card.style.transform = 'translateY(20px)';
                        card.style.transition = 'all 0.6s ease';
                        
                        setTimeout(() => {
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        }, 100);
                    }, index * 100);
                });
            }

            // Animate progress bars
            function animateProgressBars() {
                const progressBars = document.querySelectorAll('.progress-fill');
                progressBars.forEach(bar => {
                    const targetWidth = bar.style.width;
                    bar.style.width = '0';
                    setTimeout(() => {
                        bar.style.width = targetWidth;
                    }, 500);
                });
            }

            // Initialize animations
            setTimeout(animateStats, 300);
            setTimeout(animateProgressBars, 800);

            // Handle window resize for responsive behavior
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    sidebar.classList.remove('open');
                }
            });

            // Toggle Add User Form
            (function(){
                var btn = document.getElementById('toggle-add-user');
                var form = document.getElementById('add-user-form');
                var overlay = document.getElementById('add-user-overlay');
                var closeBtn = document.getElementById('close-form');
                var cancelBtn = document.getElementById('cancel-form');
                
                function closeModal() {
                    if(form) form.style.display = 'none';
                    if(overlay) overlay.style.display = 'none';
                    // Reset form on close
                    var f = form.querySelector('form');
                    if(f) f.reset();
                }
                
                function openModal() {
                    if(form) form.style.display = 'block';
                    if(overlay) overlay.style.display = 'block';
                    var first = form.querySelector('input[name="fullName"]');
                    if(first) first.focus();
                }
                
                if(btn) {
                    btn.addEventListener('click', function(e){
                        e.preventDefault();
                        openModal();
                    });
                }
                
                if(closeBtn) {
                    closeBtn.addEventListener('click', closeModal);
                }
                
                if(cancelBtn) {
                    cancelBtn.addEventListener('click', closeModal);
                }
                
                if(overlay) {
                    overlay.addEventListener('click', closeModal);
                }

                window.openAddUserModal = openModal;
                window.closeAddUserModal = closeModal;
            })();

            // Voice commands (experimental v1)
            (function () {
                const voiceToggle = document.getElementById('voice-toggle');
                const voiceStatus = document.getElementById('voice-status');
                const SpeechRecognitionApi = window.SpeechRecognition || window.webkitSpeechRecognition;
                let recognition = null;
                const homeUrl = "{{ path('app_home') }}";

                function setVoiceStatus(text, state) {
                    if (!voiceStatus) return;
                    voiceStatus.textContent = text;
                    voiceStatus.classList.remove('is-listening', 'is-error');
                    if (state === 'listening') voiceStatus.classList.add('is-listening');
                    if (state === 'error') voiceStatus.classList.add('is-error');
                }

                function activateSection(sectionId, title) {
                    const targetSection = document.getElementById(sectionId);
                    if (!targetSection) return false;

                    contentSections.forEach(section => section.classList.remove('active'));
                    targetSection.classList.add('active');

                    navLinks.forEach(link => {
                        if (link.parentElement) link.parentElement.classList.remove('active');
                    });

                    const matchingNav = Array.from(navLinks).find(link => {
                        const href = (link.getAttribute('href') || '').replace('#', '');
                        return href === sectionId;
                    });

                    if (matchingNav && matchingNav.parentElement) {
                        matchingNav.parentElement.classList.add('active');
                    } else if (sectionId === 'dashboard') {
                        const dashboardNav = Array.from(navLinks).find(link => {
                            const href = link.getAttribute('href') || '';
                            return href.indexOf('/admin') === 0 && href.indexOf('#') !== 0;
                        });
                        if (dashboardNav && dashboardNav.parentElement) {
                            dashboardNav.parentElement.classList.add('active');
                        }
                    }

                    if (pageTitle) {
                        pageTitle.textContent = title || sectionId.charAt(0).toUpperCase() + sectionId.slice(1);
                    }

                    if (window.innerWidth <= 768 && sidebar) sidebar.classList.remove('open');
                    return true;
                }

                function openUsersPageDelta(direction) {
                    const usersSection = document.getElementById('users');
                    if (!usersSection) return false;

                    if (!usersSection.classList.contains('active')) {
                        activateSection('users', 'Users');
                    }

                    const pager = usersSection.querySelector('.table-pagination');
                    if (!pager) return false;

                    const target = direction > 0
                        ? pager.querySelector('.page-link:last-child:not(.disabled)')
                        : pager.querySelector('.page-link:first-child:not(.disabled)');

                    if (!target) return false;

                    const href = target.getAttribute('href');
                    if (!href || target.classList.contains('disabled')) return false;
                    loadUsersPage(href);
                    return true;
                }

                function triggerInactiveUserAction() {
                    activateSection('users', 'Users');
                    const inactiveBtn = document.querySelector('#users .btn-deactivate');
                    if (!inactiveBtn) return false;
                    const form = inactiveBtn.closest('form');
                    if (!form) return false;
                    submitUsersFormAjax(form);
                    return true;
                }

                function triggerDeleteUserAction() {
                    activateSection('users', 'Users');
                    const deleteBtn = document.querySelector('#users .btn-delete');
                    if (!deleteBtn) return false;
                    const form = deleteBtn.closest('form');
                    if (!form) return false;
                    if (!window.confirm('Delete this user?')) return false;
                    submitUsersFormAjax(form);
                    return true;
                }

                function runVoiceCommand(rawText) {
                    const text = (rawText || '').toLowerCase().trim();
                    if (!text) return false;

                    if (text.includes('open users') || text.includes('go to users') || text === 'users') {
                        return activateSection('users', 'Users');
                    }
                    if (text.includes('open dashboard') || text.includes('go to dashboard') || text === 'dashboard') {
                        return activateSection('dashboard', 'Dashboard');
                    }
                    if (text.includes('open articles') || text.includes('go to articles') || text === 'articles') {
                        return activateSection('articles', 'Articles');
                    }
                    if (text.includes('open statistics') || text.includes('go to statistics') || text === 'statistics') {
                        return activateSection('statistics', 'Statistics');
                    }
                    if (text.includes('open sessions') || text.includes('go to sessions') || text === 'sessions') {
                        return activateSection('sessions', 'Sessions');
                    }
                    if (text.includes('next page')) {
                        return openUsersPageDelta(1);
                    }
                    if (text.includes('previous page') || text.includes('prev page') || text.includes('back page')) {
                        return openUsersPageDelta(-1);
                    }
                    if (text.includes('add user') || text.includes('new user')) {
                        activateSection('users', 'Users');
                        if (typeof window.openAddUserModal === 'function') {
                            window.openAddUserModal();
                            return true;
                        }
                        const addUserBtn = document.getElementById('toggle-add-user');
                        if (addUserBtn) {
                            addUserBtn.click();
                            return true;
                        }
                    }
                    if (text.includes('inactive user') || text.includes('deactivate user') || text.includes('unactive user')) {
                        return triggerInactiveUserAction();
                    }
                    if (text.includes('delete user')) {
                        return triggerDeleteUserAction();
                    }
                    if (text === 'close' || text.includes('close modal') || text.includes('close popup')) {
                        const modal = document.getElementById('add-user-form');
                        if (modal && modal.style.display === 'block' && typeof window.closeAddUserModal === 'function') {
                            window.closeAddUserModal();
                            return true;
                        }
                        if (recognition) recognition.stop();
                        return true;
                    }
                    if (text === 'home' || text.includes('go home') || text.includes('open home')) {
                        if (recognition) recognition.stop();
                        window.location.href = homeUrl;
                        return true;
                    }

                    return false;
                }

                if (!voiceToggle || !voiceStatus) return;

                if (!SpeechRecognitionApi) {
                    voiceToggle.disabled = true;
                    voiceToggle.style.opacity = '0.55';
                    voiceToggle.style.cursor = 'not-allowed';
                    setVoiceStatus('Voice unsupported', 'error');
                    return;
                }

                recognition = new SpeechRecognitionApi();
                recognition.lang = 'en-US';
                recognition.continuous = true;
                recognition.interimResults = false;

                let isListening = false;

                recognition.onstart = function () {
                    isListening = true;
                    voiceToggle.classList.add('is-listening');
                    setVoiceStatus('Listening...', 'listening');
                };

                recognition.onend = function () {
                    isListening = false;
                    voiceToggle.classList.remove('is-listening');
                    setVoiceStatus('Voice: off');
                };

                recognition.onerror = function (event) {
                    setVoiceStatus('Voice error: ' + (event.error || 'unknown'), 'error');
                };

                recognition.onresult = function (event) {
                    const result = event.results[event.results.length - 1];
                    if (!result || !result[0]) return;
                    const command = result[0].transcript || '';
                    const ok = runVoiceCommand(command);
                    setVoiceStatus(ok ? ('Done: ' + command) : ('Unknown: ' + command), ok ? 'listening' : 'error');
                };

                voiceToggle.addEventListener('click', function () {
                    if (!isListening) {
                        recognition.start();
                    } else {
                        recognition.stop();
                    }
                });
            })();
        });
    </script>
