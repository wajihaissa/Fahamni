    {{ parent() }}
    <script>
        // Dashboard JavaScript functionality
        document.addEventListener('DOMContentLoaded', function() {
            
            // Sidebar toggle functionality
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('open');
                });
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                if (window.innerWidth <= 768) {
                    if (!sidebar.contains(event.target) && !sidebarToggle.contains(event.target)) {
                        sidebar.classList.remove('open');
                    }
                }
            });

            // Navigation functionality
            const navLinks = document.querySelectorAll('.sidebar-nav a');
            const contentSections = document.querySelectorAll('.content-section');
            const pageTitle = document.querySelector('.page-title');

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    const href = this.getAttribute('href') || '';
                    // If it's an external or proper route, allow navigation
                    if (href && (href.startsWith('/') || href.startsWith('http'))) return;

                    // Prevent default for hash navigation and AJAX-backed sections
                    e.preventDefault();

                    // Remove active class from all nav items
                    navLinks.forEach(navLink => navLink.parentElement.classList.remove('active'));
                    // Add active to clicked
                    this.parentElement.classList.add('active');

                    // Target section id (without #)
                    const targetId = href.replace('#','');
                    const targetSection = document.getElementById(targetId);

                    // If this link has a data-route, fetch server-rendered content and inject
                    const dataRoute = this.getAttribute('data-route');
                    if (dataRoute && targetSection) {
                        // Hide other sections and show target immediately (no loading state)
                        contentSections.forEach(section => section.classList.remove('active'));
                        targetSection.classList.add('active');

                        // Fetch and inject server content asynchronously
                        fetch(dataRoute, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
                            .then(res => {
                                if (!res.ok) throw new Error('Network error');
                                return res.text();
                            })
                            .then(html => {
                                // Parse returned HTML and extract the card element
                                const parser = new DOMParser();
                                const doc = parser.parseFromString(html, 'text/html');
                                // Get the .card div which contains the full styled table
                                const cardElement = doc.querySelector('.card');
                                if (cardElement) {
                                    // Replace content in #users-content or the entire section
                                    const usersContent = targetSection.querySelector('#users-content');
                                    if (usersContent) {
                                        usersContent.innerHTML = cardElement.innerHTML;
                                    }
                                }
                            })
                            .catch(err => {
                                console.error('Fetch error:', err);
                                // Keep existing content on error
                            });

                        // Update page title
                        const navText = this.textContent.trim();
                        if (pageTitle) pageTitle.textContent = navText;

                        // Close sidebar on mobile
                        if (window.innerWidth <= 768) sidebar.classList.remove('open');
                        return;
                    }

                    // Default: show local in-page section
                    if (targetSection) {
                        contentSections.forEach(section => section.classList.remove('active'));
                        targetSection.classList.add('active');
                        const navText = this.textContent.trim();
                        if (pageTitle) pageTitle.textContent = navText;
                    }

                    if (window.innerWidth <= 768) sidebar.classList.remove('open');
                });
            });

            // Modal functionality
            const addUserBtn = document.querySelector('.new-user-btn');
            const modal = document.getElementById('addUserModal');
            const modalClose = document.querySelector('.modal-close');
            const modalForm = document.querySelector('.modal-form');
            const modalCancel = document.getElementById('modal-cancel');
            const modalErrors = document.getElementById('modal-errors');

            // Open modal when clicking "Add New User"
            if (addUserBtn) {
                addUserBtn.addEventListener('click', function() {
                    if (modal) {
                        modal.classList.add('active');
                        modalForm.reset();
                        modalErrors.style.display = 'none';
                    }
                });
            }

            // Close modal
            function closeModal() {
                if (modal) modal.classList.remove('active');
                modalForm.reset();
                modalErrors.style.display = 'none';
            }

            if (modalClose) {
                modalClose.addEventListener('click', closeModal);
            }

            if (modalCancel) {
                modalCancel.addEventListener('click', closeModal);
            }

            // Close modal when clicking outside
            if (modal) {
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) {
                        closeModal();
                    }
                });
            }

            // Handle form submission
            if (modalForm) {
                modalForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Show loading state
                    const submitBtn = modalForm.querySelector('button[type="submit"]');
                    const originalText = submitBtn.textContent;
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'Creating...';
                    
                    // Get form data manually to ensure it's sent correctly
                    const fullName = document.getElementById('userName').value;
                    const email = document.getElementById('userEmail').value;
                    const password = document.getElementById('userPassword').value;
                    const confirmPassword = document.getElementById('userConfirmPassword').value;
                    const roles = document.getElementById('userRole').value;
                    
                    // Log for debugging
                    console.log('Submitting user:', { fullName, email, password, confirmPassword, roles });
                    
                    // Create FormData with explicit values
                    const formData = new URLSearchParams();
                    formData.append('fullName', fullName);
                    formData.append('email', email);
                    formData.append('password', password);
                    formData.append('confirmPassword', confirmPassword);
                    formData.append('roles', roles);
                    
                    // POST to server
                    fetch('/admin/users/create', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: formData.toString(),
                        credentials: 'same-origin'
                    })
                    .then(async res => {
                        console.log('Response status:', res.status, 'OK:', res.ok);
                        
                        if (res.ok || res.redirected) {
                            // Success - user was created
                            closeModal();
                            reloadUsersTable();
                            showSuccessMessage('User created successfully!');
                            return;
                        }
                        
                        if (res.status === 302 || res.status === 301 || res.status === 303) {
                            // Redirect response
                            closeModal();
                            reloadUsersTable();
                            showSuccessMessage('User created successfully!');
                            return;
                        }
                        
                        // Error case - read response
                        const text = await res.text();
                        console.log('Error response:', text.substring(0, 500));
                        
                        if (text.includes('alert-error')) {
                            const match = text.match(/<div class="alert alert-error"[^>]*>(.*?)<\/div>/s);
                            const errorMsg = match ? match[1].replace(/<[^>]*>/g, '').trim() : 'Failed to create user';
                            showModalError(errorMsg);
                        } else if (text.includes('is already registered') || text.includes('already')) {
                            showModalError('Email already registered or validation failed');
                        } else {
                            showModalError('Failed to create user. Please check your input.');
                        }
                        
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    })
                    .catch(err => {
                        console.error('Create user error:', err);
                        showModalError('An error occurred while creating the user: ' + err.message);
                        submitBtn.disabled = false;
                        submitBtn.textContent = originalText;
                    });
                    
                    function showModalError(message) {
                        modalErrors.innerHTML = `<div style="background: #fee2e2; color: #991b1b; border: 1px solid #fecaca; padding: 1rem; border-radius: 8px; font-size: 0.9rem;">${message}</div>`;
                        modalErrors.style.display = 'block';
                    }
                });
            }

            function reloadUsersTable() {
                loadUsersPage(getCurrentUsersPageUrl());
            }

            function showSuccessMessage(msg) {
                alert(msg);
            }

            // AJAX pagination for Users Directory (no full page reload)
            function loadUsersPage(url) {
                const usersSection = document.getElementById('users');
                if (!usersSection) return;
                const usersContent = usersSection.querySelector('#users-content');
                if (!usersContent) return;

                captureUsersDirectoryFilters();
                usersContent.classList.add('is-loading');
                fetch(url, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    credentials: 'same-origin'
                })
                .then(res => res.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const nextContent = doc.querySelector('#users #users-content');
                    if (nextContent) {
                        usersContent.innerHTML = nextContent.innerHTML;
                        restoreUsersDirectoryFilters();
                        applyUsersDirectoryFilters();
                        // keep an up-to-date backup for "Back to Users" behavior
                        if (!document.getElementById('users-table-backup')) {
                            const backup = document.createElement('div');
                            backup.id = 'users-table-backup';
                            backup.style.display = 'none';
                            document.body.appendChild(backup);
                        }
                        document.getElementById('users-table-backup').innerHTML = usersContent.innerHTML;
                        if (window.location.hash !== '#users') {
                            history.replaceState(null, '', '#users');
                        }
                    }
                })
                .catch(err => console.error('Users pagination load error:', err))
                .finally(() => {
                    usersContent.classList.remove('is-loading');
                });
            }

            function getCurrentUsersPageUrl() {
                const activePage = document.querySelector('#users .table-pagination .page-link.active');
                if (activePage) {
                    return activePage.getAttribute('href');
                }
                return window.location.pathname + window.location.search + '#users';
            }

            let usersDirectorySearchState = '';
            let usersDirectoryFilterState = 'all';

            function captureUsersDirectoryFilters() {
                const usersSection = document.getElementById('users');
                if (!usersSection) return;
                const searchInput = usersSection.querySelector('#usersDirectorySearch');
                const filterSelect = usersSection.querySelector('#usersDirectoryFilter');
                if (searchInput) usersDirectorySearchState = searchInput.value || '';
                if (filterSelect) usersDirectoryFilterState = filterSelect.value || 'all';
            }

            function restoreUsersDirectoryFilters() {
                const usersSection = document.getElementById('users');
                if (!usersSection) return;
                const searchInput = usersSection.querySelector('#usersDirectorySearch');
                const filterSelect = usersSection.querySelector('#usersDirectoryFilter');
                if (searchInput) searchInput.value = usersDirectorySearchState;
                if (filterSelect) filterSelect.value = usersDirectoryFilterState;
            }

            function applyUsersDirectoryFilters() {
                const usersSection = document.getElementById('users');
                if (!usersSection) return;
                const searchInput = usersSection.querySelector('#usersDirectorySearch');
                const filterSelect = usersSection.querySelector('#usersDirectoryFilter');
                const noResults = usersSection.querySelector('#usersDirectoryNoResults');
                const rows = usersSection.querySelectorAll('.users-directory-row');
                if (!searchInput || !filterSelect || rows.length === 0) {
                    if (noResults) noResults.style.display = 'none';
                    return;
                }

                const q = (searchInput.value || '').trim().toLowerCase();
                const filter = (filterSelect.value || 'all').toLowerCase();
                let visibleCount = 0;

                rows.forEach(function (row) {
                    const name = (row.getAttribute('data-name') || '').toLowerCase();
                    const email = (row.getAttribute('data-email') || '').toLowerCase();
                    const role = (row.getAttribute('data-role') || '').toLowerCase();
                    const status = (row.getAttribute('data-status') || '').toLowerCase();

                    const searchMatch = q === '' || name.includes(q) || email.includes(q);
                    const filterMatch = filter === 'all' || status === filter || role === filter;
                    const show = searchMatch && filterMatch;
                    row.style.display = show ? '' : 'none';
                    if (show) visibleCount++;
                });

                if (noResults) {
                    noResults.style.display = visibleCount === 0 ? 'block' : 'none';
                }
            }

            function submitUsersFormAjax(form) {
                const usersSection = document.getElementById('users');
                if (!usersSection) return;
                const usersContent = usersSection.querySelector('#users-content');
                if (!usersContent) return;

                usersContent.classList.add('is-loading');
                const formData = new URLSearchParams(new FormData(form));
                fetch(form.getAttribute('action'), {
                    method: form.getAttribute('method') || 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData.toString(),
                    credentials: 'same-origin'
                })
                .then(function () {
                    loadUsersPage(getCurrentUsersPageUrl());
                })
                .catch(function (err) {
                    console.error('Users action failed:', err);
                    usersContent.classList.remove('is-loading');
                });
            }

            function isUsersActionUrl(action) {
                try {
                    const url = new URL(action, window.location.origin);
                    return /\/admin\/users\/\d+\/(toggle-status|delete|accept|decline|move-to-pending)$/.test(url.pathname);
                } catch (e) {
                    return /\/admin\/users\/\d+\/(toggle-status|delete|accept|decline|move-to-pending)$/.test(action);
                }
            }

            // Store initial users table for restoration
            function storeUsersTableBackup() {
                const usersSection = document.getElementById('users');
                const usersContent = usersSection.querySelector('#users-content');
                if (usersContent) {
                    if (!document.getElementById('users-table-backup')) {
                        const backup = document.createElement('div');
                        backup.id = 'users-table-backup';
                        backup.style.display = 'none';
                        document.body.appendChild(backup);
                    }
                    document.getElementById('users-table-backup').innerHTML = usersContent.innerHTML;
                }
            }
            
            // Store initial table on page load
            setTimeout(storeUsersTableBackup, 100);
            const fraudModal = document.getElementById('fraud-reasons-modal');
            const fraudModalClose = document.getElementById('fraud-modal-close');
            const fraudModalHeadline = document.getElementById('fraud-modal-headline');
            const fraudModalRecommendation = document.getElementById('fraud-modal-recommendation');
            const fraudModalReasons = document.getElementById('fraud-modal-reasons');

            function closeFraudModal() {
                if (!fraudModal) return;
                fraudModal.style.display = 'none';
            }

            function openFraudModal(payload) {
                if (!fraudModal || !fraudModalHeadline || !fraudModalRecommendation || !fraudModalReasons) return;
                const userName = payload.userName || 'Pending user';
                const level = String(payload.level || 'low').toUpperCase();
                const score = String(payload.score ?? '0');
                const recommendation = payload.recommendation || 'Safe for normal review flow.';
                const reasons = Array.isArray(payload.reasons) ? payload.reasons : [];
                fraudModalHeadline.textContent = userName + ': ' + level + ' risk (' + score + '/100)';
                fraudModalRecommendation.textContent = 'Recommendation: ' + recommendation;
                fraudModalReasons.innerHTML = reasons.map(function (reason) {
                    return '<li style="margin:0 0 6px 0;">' + reason.replace(/</g, '&lt;').replace(/>/g, '&gt;') + '</li>';
                }).join('');
                fraudModal.style.display = 'flex';
            }

            if (fraudModalClose) {
                fraudModalClose.addEventListener('click', closeFraudModal);
            }
            if (fraudModal) {
                fraudModal.addEventListener('click', function (e) {
                    if (e.target === fraudModal) closeFraudModal();
                });
            }

            // Action buttons functionality
            document.addEventListener('click', function(e) {
                const scopeTab = e.target.closest('#users .scope-tab');
                if (scopeTab) {
                    e.preventDefault();
                    const href = scopeTab.getAttribute('href');
                    if (href) {
                        loadUsersPage(href);
                    }
                    return;
                }

                const pageLink = e.target.closest('#users .table-pagination .page-link');
                if (pageLink && !pageLink.classList.contains('disabled')) {
                    e.preventDefault();
                    const href = pageLink.getAttribute('href');
                    if (href) {
                        loadUsersPage(href);
                    }
                    return;
                }

                const fraudReasonsBtn = e.target.closest('.btn-fraud-reasons');
                if (fraudReasonsBtn) {
                    e.preventDefault();
                    const reasonsRaw = fraudReasonsBtn.getAttribute('data-fraud-reasons') || '';
                    openFraudModal({
                        userName: fraudReasonsBtn.getAttribute('data-user-name') || 'Pending user',
                        level: fraudReasonsBtn.getAttribute('data-fraud-level') || 'low',
                        score: fraudReasonsBtn.getAttribute('data-fraud-score') || '0',
                        recommendation: fraudReasonsBtn.getAttribute('data-fraud-recommendation') || 'Safe for normal review flow.',
                        reasons: reasonsRaw ? reasonsRaw.split(' || ').filter(Boolean) : []
                    });
                    return;
                }

                const button = e.target.closest('.btn-action');
                if (!button) return;

                const row = button.closest('tr');
                if (!row) return;

                // Get the user data from the row
                const nameCell = row.querySelector('td:first-child span');
                const emailCell = row.querySelector('td:nth-child(2)');
                const roleCell = row.querySelector('td:nth-child(3) .badge');
                const statusCell = row.querySelector('td:nth-child(4) .badge');
                const dataUserName = button.getAttribute('data-user-name');
                const dataUserEmail = button.getAttribute('data-user-email');
                const dataUserRole = button.getAttribute('data-user-role');
                const dataUserStatus = button.getAttribute('data-user-status');
                
                // Get user ID from the button's data attribute
                let userId = button.getAttribute('data-user-id');
                const aiRaw = button.getAttribute('data-ai-summary') || '';

                function escapeHtml(value) {
                    return String(value ?? '')
                        .replace(/&/g, '&amp;')
                        .replace(/</g, '&lt;')
                        .replace(/>/g, '&gt;')
                        .replace(/"/g, '&quot;')
                        .replace(/'/g, '&#39;');
                }
                
                if (button.classList.contains('btn-view')) {
                    e.preventDefault();
                    // Show user detail in dashboard
                    const usersSection = document.getElementById('users');
                    
                    // Hide other sections
                    contentSections.forEach(section => section.classList.remove('active'));
                    usersSection.classList.add('active');
                    
                    // Get user name for detail view
                    const userName = (dataUserName && dataUserName.trim()) || (nameCell ? nameCell.textContent.trim() : 'User');
                    const userEmail = (dataUserEmail && dataUserEmail.trim()) || (emailCell ? emailCell.textContent.trim() : '-');
                    const userRole = (dataUserRole && dataUserRole.trim()) || (roleCell ? roleCell.textContent.trim() : '-');
                    const userStatus = (dataUserStatus && dataUserStatus.trim()) || (statusCell ? statusCell.textContent.trim() : '-');
                    let aiSummary = null;
                    if (aiRaw) {
                        try {
                            aiSummary = JSON.parse(aiRaw);
                        } catch (err) {
                            aiSummary = null;
                        }
                    }

                    let aiHtml = '';
                    if (aiSummary && typeof aiSummary === 'object') {
                        const riskLevel = String(aiSummary.riskLevel || 'low').toLowerCase();
                        const riskClass = riskLevel === 'high'
                            ? 'background:#fee2e2;color:#991b1b;'
                            : (riskLevel === 'medium' ? 'background:#fef3c7;color:#92400e;' : 'background:#dcfce7;color:#166534;');
                        const findings = Array.isArray(aiSummary.findings) ? aiSummary.findings : [];
                        const actions = Array.isArray(aiSummary.actions) ? aiSummary.actions : [];
                        const findingsHtml = findings.map(function (item) {
                            return '<li style="margin:0 0 6px 0;">' + escapeHtml(item) + '</li>';
                        }).join('');
                        const actionsHtml = actions.map(function (item) {
                            return '<li style="margin:0 0 6px 0;">' + escapeHtml(item) + '</li>';
                        }).join('');
                        aiHtml = `
                            <div style="margin-top:1.5rem;padding:1rem;background:#f8fafc;border:1px solid #e2e8f0;border-radius:10px;">
                                <div style="display:flex;justify-content:space-between;align-items:center;gap:10px;flex-wrap:wrap;margin-bottom:0.5rem;">
                                    <h4 style="margin:0;font-size:1rem;color:var(--text-primary);"><i class="fas fa-robot"></i> AI User Summary</h4>
                                    <div style="display:flex;gap:8px;align-items:center;">
                                        <span style="padding:4px 8px;border-radius:999px;font-size:11px;font-weight:700;text-transform:uppercase;${riskClass}">${escapeHtml(riskLevel)} risk</span>
                                        <span style="font-size:12px;font-weight:700;color:var(--text-primary);">Score: ${escapeHtml(aiSummary.score || 0)}/100</span>
                                    </div>
                                </div>
                                <p style="margin:0 0 0.75rem 0;color:#334155;font-size:0.92rem;">${escapeHtml(aiSummary.headline || '')}</p>
                                <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:1rem;">
                                    <div>
                                        <p style="margin:0 0 0.45rem 0;font-size:12px;font-weight:700;color:var(--text-primary);">Key Findings</p>
                                        <ul style="margin:0;padding-left:18px;color:#475569;font-size:0.88rem;">${findingsHtml}</ul>
                                    </div>
                                    <div>
                                        <p style="margin:0 0 0.45rem 0;font-size:12px;font-weight:700;color:var(--text-primary);">Recommended Admin Actions</p>
                                        <ul style="margin:0;padding-left:18px;color:#475569;font-size:0.88rem;">${actionsHtml}</ul>
                                    </div>
                                </div>
                            </div>
                        `;
                    }
                    
                    // Show detail view
                    const usersContent = usersSection.querySelector('#users-content');
                    usersContent.innerHTML = `
                        <div class="content-card">
                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 2rem;">
                                <button class="btn-secondary" onclick="document.getElementById('users').querySelector('#users-content').innerHTML = document.getElementById('users-table-content').innerHTML" style="padding: 0.5rem 1rem;">
                                    <i class="fas fa-arrow-left"></i> Back to Users
                                </button>
                                <h3 style="margin: 0; font-size: 1.5rem;">User Details</h3>
                            </div>
                            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Name</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${userName}</p>
                                </div>
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Email</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${userEmail}</p>
                                </div>
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Role</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${userRole}</p>
                                </div>
                                <div style="padding: 1rem; background: #f8fafc; border-radius: 10px;">
                                    <p style="color: var(--muted); font-size: 0.9rem; margin: 0 0 0.5rem 0;">Status</p>
                                    <p style="font-weight: 600; color: var(--text-primary); margin: 0;">${userStatus}</p>
                                </div>
                            </div>
                            ${aiHtml}
                        </div>
                    `;
                    
                    
                } else if (button.classList.contains('btn-delete')) {
                    e.preventDefault();
                    if (confirm('Are you sure you want to delete this user?')) {
                        const deleteForm = button.closest('form');
                        if (deleteForm) submitUsersFormAjax(deleteForm);
                    }
                }
            });

            // Smooth AJAX submit for Users actions (activate/deactivate, accept/decline, delete)
            document.addEventListener('submit', function(e) {
                const form = e.target;
                if (!(form instanceof HTMLFormElement)) return;
                if (!form.closest('#users')) return;

                const action = form.getAttribute('action') || '';
                const isUsersAction = isUsersActionUrl(action);
                if (!isUsersAction) return;

                const isPendingAccept = form.classList.contains('pending-accept-form') || /\/admin\/users\/\d+\/accept$/.test(action);
                if (isPendingAccept) {
                    const score = parseInt(form.getAttribute('data-fraud-score') || '0', 10);
                    if (score >= 50) {
                        const userName = form.getAttribute('data-user-name') || 'this user';
                        window.alert('Cannot accept ' + userName + ': fraud score is ' + score + '/100. Minimum required is below 50.');
                        e.preventDefault();
                        return;
                    }
                }

                const isStatusToggle = form.classList.contains('status-toggle-form') || /\/admin\/users\/\d+\/toggle-status$/.test(action);
                if (isStatusToggle) {
                    const willActivate = (form.getAttribute('data-will-activate') || '0') === '1';
                    const score = parseInt(form.getAttribute('data-fraud-score') || '0', 10);
                    if (willActivate && score >= 50) {
                        const userName = form.getAttribute('data-user-name') || 'this user';
                        window.alert('Cannot activate ' + userName + ': fraud score is ' + score + '/100. Minimum required is below 50.');
                        e.preventDefault();
                        return;
                    }
                }

                if (isPendingAccept) {
                    const level = String(form.getAttribute('data-fraud-level') || 'low').toLowerCase();
                    if (level === 'high') {
                        const score = form.getAttribute('data-fraud-score') || '0';
                        const userName = form.getAttribute('data-user-name') || 'this user';
                        const recommendation = form.getAttribute('data-fraud-recommendation') || '';
                        const warning = 'High fraud risk detected for ' + userName + ' (' + score + '/100).\\n\\n' +
                            (recommendation ? ('Recommendation: ' + recommendation + '\\n\\n') : '') +
                            'Do you want to continue with ACCEPT?';
                        if (!window.confirm(warning)) {
                            e.preventDefault();
                            return;
                        }
                    }
                }

                e.preventDefault();
                submitUsersFormAjax(form);
            });

            document.addEventListener('input', function (e) {
                if (e.target && e.target.id === 'usersDirectorySearch') {
                    usersDirectorySearchState = e.target.value || '';
                    applyUsersDirectoryFilters();
                }
            });

            document.addEventListener('change', function (e) {
                if (e.target && e.target.id === 'usersDirectoryFilter') {
                    usersDirectoryFilterState = e.target.value || 'all';
                    applyUsersDirectoryFilters();
                }
            });

            restoreUsersDirectoryFilters();
            applyUsersDirectoryFilters();

            // Search functionality
            const searchInput = document.querySelector('.search-bar input');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    console.log('Searching for:', searchTerm);
                });
            }

            // Notification functionality
            const notificationIcon = document.querySelector('.notification-icon');
            if (notificationIcon) {
                notificationIcon.addEventListener('click', function() {
                    console.log('Notifications clicked');
                    alert('Notifications functionality would be implemented here');
                });
            }

            // Admin profile dropdown
            const adminProfile = document.querySelector('.admin-mini-profile');
            if (adminProfile) {
                adminProfile.addEventListener('click', function() {
                    console.log('Admin profile clicked');
                    alert('Profile dropdown would be implemented here');
                });
            }

            // Animate statistics cards on page load
            function animateStats() {
                const statCards = document.querySelectorAll('.stat-card');
                statCards.forEach((card, index) => {
                    setTimeout(() => {
                        card.style.opacity = '0';
                        card.style.transform = 'translateY(20px)';
                        card.style.transition = 'all 0.6s ease';
                        
                        setTimeout(() => {
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        }, 100);
                    }, index * 100);
                });
            }

            // Animate progress bars
            function animateProgressBars() {
                const progressBars = document.querySelectorAll('.progress-fill');
                progressBars.forEach(bar => {
                    const targetWidth = bar.style.width;
                    bar.style.width = '0';
                    setTimeout(() => {
                        bar.style.width = targetWidth;
                    }, 500);
                });
            }

            // Initialize animations
            setTimeout(animateStats, 300);
            setTimeout(animateProgressBars, 800);

            // Handle window resize for responsive behavior
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    sidebar.classList.remove('open');
                }
            });
        });
    </script>
