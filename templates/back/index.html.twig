        #users .badge-active { background: #ecfdf3; color: #166534; border: 1px solid #86efac; }
        #users .badge-inactive { background: #fff1f2; color: #9f1239; border: 1px solid #fda4af; }
        #users .badge-tutor { background: #ecfeff; color: #155e75; border: 1px solid #a5f3fc; }
