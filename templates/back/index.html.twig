{% block body %}
    <!-- Sidebar -->
    {% include 'back/_sidebar.html.twig' %}

    <!-- Main Content -->
    <div class="main-content">
        {% include 'back/_admin_navbar.html.twig' %}
        <!-- Dashboard Content -->
        <main class="dashboard-content">
            <!-- Statistics Overview -->
            <section id="dashboard" class="content-section active">
                <div class="stats-overview">
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-info">
                            <h3>{{ totalUsers }}</h3>
                            <p>Total Users</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <div class="stat-info">
                            <h3>{{ totalStudents }}</h3>
                            <p>Total Students</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-video"></i>
                        </div>
                        <div class="stat-info">
                            <h3>{{ recentUsers|length }}</h3>
                            <p>Active Users</p>
                        </div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon">
                            <i class="fas fa-newspaper"></i>
                        </div>
                        <div class="stat-info">
                            <h3>{{ totalArticles }}</h3>
                            <p>Articles Published</p>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="content-grid">
                    <div class="content-card">
                        <h3>Recent Users</h3>
                        <div class="user-list">
                            {% for user in recentUsers %}
                                <div class="user-item">
                                    <div class="avatar" style="width:40px; height:40px; border-radius:50%; background:linear-gradient(135deg, #667eea 0%, #764ba2 100%); display:flex; align-items:center; justify-content:center; color:white; font-weight:600; font-size:14px;">
                                        {%- set parts = user.fullName|split(' ') -%}
                                        {%- if parts|length >= 2 -%}
                                            {{ (parts[0][0:1])|upper }}{{ (parts[1][0:1])|upper }}
                                        {%- else -%}
                                            {{ (user.fullName[0:1])|upper }}
                                        {%- endif -%}
                                    </div>
                                    <div class="user-info">
                                        <span class="name">{{ user.fullName }}</span>
                                        <span class="role">{{ user.roles[0]|replace({'ROLE_': ''})|lower }}</span>
                                    </div>
                                    <span class="status {% if user.status %}active{% else %}inactive{% endif %}">{% if user.status %}Active{% else %}Inactive{% endif %}</span>
                                </div>
                            {% else %}
                                <p style="color: #64748b; padding: 1rem;">No users yet</p>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="content-card">
                        <h3>Platform Growth</h3>
                        <div class="chart-container">
                            <div class="bar-chart">
                                <div class="bar" style="height: 70%">
                                    <span class="bar-label">Jan</span>
                                </div>
                                <div class="bar" style="height: 85%">
                                    <span class="bar-label">Feb</span>
                                </div>
                                <div class="bar" style="height: 60%">
                                    <span class="bar-label">Mar</span>
                                </div>
                                <div class="bar" style="height: 90%">
                                    <span class="bar-label">Apr</span>
                                </div>
                                <div class="bar" style="height: 75%">
                                    <span class="bar-label">May</span>
                                </div>
                                <div class="bar" style="height: 95%">
                                    <span class="bar-label">Jun</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Users Management -->
            <section id="users" class="content-section">
                <div class="section-header">
                    <h2>Users Management</h2>
                    <button class="btn-primary new-user-btn">Add New User</button>
                </div>
                
                <div id="users-content">
                    {% if pendingUsers is defined and pendingUsers|length > 0 %}
                        <div class="content-card" style="margin-bottom:12px;">
                            <h3 style="margin:0 0 8px 0;">Pending Registrations</h3>
                            <p class="panel-subtitle">Review new accounts and decide whether to approve or decline them.</p>
                            <div class="card">
                                <table class="data-table" style="width:100%;">
                                    <thead>
                                        <tr><th>Name</th><th>Email</th><th>Requested</th><th>Fraud Risk</th><th>Actions</th></tr>
                                    </thead>
                                    <tbody>
                                        {% for u in pendingUsers %}
                                            {% set fraud = pendingFraudScores[u.id]|default(null) %}
                                            <tr>
                                                <td>{{ u.fullName }}</td>
                                                <td>{{ u.email }}</td>
                                                <td>{{ u.createdAt ? u.createdAt|date('M d, Y H:i') : '-' }}</td>
                                                <td>
                                                    {% if fraud %}
                                                        {% set fraudClass = fraud.level == 'high' ? 'badge-inactive' : (fraud.level == 'medium' ? 'badge-tutor' : 'badge-active') %}
                                                        <span class="badge {{ fraudClass }}" title="{{ fraud.recommendation }}">{{ fraud.level|upper }} ({{ fraud.score }}/100)</span>
                                                        <div style="font-size:12px;color:#64748b;margin-top:4px;">
                                                            {{ fraud.reasons|slice(0,2)|join(' ') }}
                                                        </div>
                                                        <button
                                                            type="button"
                                                            class="btn-secondary btn-fraud-reasons"
                                                            style="margin-top:6px;padding:4px 8px;font-size:12px;"
                                                            data-user-name="{{ u.fullName }}"
                                                            data-fraud-level="{{ fraud.level }}"
                                                            data-fraud-score="{{ fraud.score }}"
                                                            data-fraud-recommendation="{{ fraud.recommendation }}"
                                                            data-fraud-reasons="{{ fraud.reasons|join(' || ') }}"
                                                        >
                                                            View full reasons
                                                        </button>
                                                    {% else %}
                                                        <span class="badge badge-active">LOW (0/100)</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <form
                                                        method="POST"
                                                        action="{{ path('admin_users_accept', {id: u.id}) }}"
                                                        style="display:inline-block;margin-right:6px;"
                                                        class="pending-accept-form"
                                                        data-user-name="{{ u.fullName }}"
                                                        data-fraud-level="{{ fraud ? fraud.level : 'low' }}"
                                                        data-fraud-score="{{ fraud ? fraud.score : 0 }}"
                                                        data-fraud-recommendation="{{ fraud ? fraud.recommendation : 'Safe for normal review flow.' }}"
                                                    >
                                                        <input type="hidden" name="_token" value="{{ csrf_token('accept' ~ u.id) }}">
                                                        <button class="btn-primary" type="submit" title="{% if fraud and fraud.score >= 50 %}Blocked: fraud score >= 50{% else %}Accept{% endif %}">
                                                            Accept
                                                        </button>
                                                    </form>
                                                    <form method="POST" action="{{ path('admin_users_decline', {id: u.id}) }}" style="display:inline-block;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('decline' ~ u.id) }}">
                                                        <button class="btn-secondary" type="submit">Decline</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="fraud-reasons-modal" style="display:none;position:fixed;inset:0;background:rgba(15,23,42,.45);z-index:10020;align-items:center;justify-content:center;padding:16px;">
                            <div style="width:100%;max-width:560px;background:#fff;border-radius:12px;border:1px solid #e2e8f0;box-shadow:0 20px 48px rgba(15,23,42,.2);overflow:hidden;">
                                <div style="display:flex;align-items:center;justify-content:space-between;padding:14px 16px;border-bottom:1px solid #e2e8f0;">
                                    <h3 style="margin:0;font-size:1rem;color:#0f172a;"><i class="fas fa-shield-alt"></i> Fraud Scoring Details</h3>
                                    <button type="button" id="fraud-modal-close" style="background:none;border:none;font-size:1.2rem;line-height:1;cursor:pointer;color:#64748b;">&times;</button>
                                </div>
                                <div style="padding:14px 16px;">
                                    <p id="fraud-modal-headline" style="margin:0 0 10px 0;color:#334155;font-size:0.92rem;"></p>
                                    <p id="fraud-modal-recommendation" style="margin:0 0 10px 0;color:#475569;font-size:0.9rem;"></p>
                                    <p style="margin:0 0 6px 0;font-weight:700;color:#0f172a;font-size:0.85rem;">Reasons</p>
                                    <ul id="fraud-modal-reasons" style="margin:0;padding-left:18px;color:#475569;font-size:0.9rem;"></ul>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <div class="content-card">
                        {% set usersScope = users_scope|default('all') %}
                        {% set usersScopeLabel = usersScope == 'approved' ? 'Approved Users' : (usersScope == 'declined' ? 'Declined Registrations' : 'Reviewed User Directory') %}
                        <span class="list-header-label">{{ usersScopeLabel }}</span>
                        <div class="scope-tabs">
                            <a class="scope-tab {{ usersScope == 'all' ? 'active' : '' }}" href="{{ path('admin_dashboard', { users_scope: 'all', users_page: 1 }) }}#users">All</a>
                            <a class="scope-tab {{ usersScope == 'approved' ? 'active' : '' }}" href="{{ path('admin_dashboard', { users_scope: 'approved', users_page: 1 }) }}#users">Approved</a>
                            <a class="scope-tab {{ usersScope == 'declined' ? 'active' : '' }}" href="{{ path('admin_dashboard', { users_scope: 'declined', users_page: 1 }) }}#users">Declined</a>
                        </div>
                        <div class="directory-tools">
                            <input type="text" id="usersDirectorySearch" class="directory-search" placeholder="Search by name or email...">
                            <select id="usersDirectoryFilter" class="directory-filter">
                                <option value="all">All</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                                <option value="student">Student</option>
                                <option value="tutor">Tutor</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                        <div id="add-user-overlay" style="position:fixed;top:0;left:0;right:0;bottom:0;background:rgba(0,0,0,0.5);display:none;z-index:9999;"></div>
                        <div id="add-user-form" style="position:fixed;top:50%;left:50%;transform:translate(-50%,-50%);background:white;border-radius:12px;padding:2rem;width:90%;max-width:600px;display:none;z-index:10000;box-shadow:0 10px 40px rgba(0,0,0,0.3);">
                            <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:1rem;">
                                <h2 style="margin:0;color:#0b1220;">Add New User</h2>
                                <button type="button" id="close-form" style="background:none;border:none;font-size:1.5rem;cursor:pointer;color:#6b7280;">&times;</button>
                            </div>
                            <form method="POST" action="{{ path('admin_users_create') }}" style="display:contents;">
                                <input type="hidden" name="_token" value="{{ csrf_token('add_user') }}">
                                <input type="hidden" name="return_to" value="admin_dashboard">
                                <div style="display:grid;grid-template-columns:1fr 1fr;gap:16px;margin-bottom:20px;">
                                    <div style="display:flex;flex-direction:column;">
                                        <label style="font-size:0.875rem;font-weight:600;color:#0b1220;margin-bottom:6px;">Full Name</label>
                                        <input type="text" name="fullName" placeholder="John Doe" required style="padding:10px;border:1px solid #e5e7eb;border-radius:8px;font-size:0.95rem;transition:border-color 0.3s;" />
                                    </div>
                                    <div style="display:flex;flex-direction:column;">
                                        <label style="font-size:0.875rem;font-weight:600;color:#0b1220;margin-bottom:6px;">Email Address</label>
                                        <input type="email" name="email" placeholder="john@example.com" required style="padding:10px;border:1px solid #e5e7eb;border-radius:8px;font-size:0.95rem;transition:border-color 0.3s;" />
                                    </div>
                                    <div style="display:flex;flex-direction:column;">
                                        <label style="font-size:0.875rem;font-weight:600;color:#0b1220;margin-bottom:6px;">Password</label>
                                        <input type="password" name="password" placeholder="" required style="padding:10px;border:1px solid #e5e7eb;border-radius:8px;font-size:0.95rem;transition:border-color 0.3s;" />
                                    </div>
                                    <div style="display:flex;flex-direction:column;">
                                        <label style="font-size:0.875rem;font-weight:600;color:#0b1220;margin-bottom:6px;">Confirm Password</label>
                                        <input type="password" name="confirmPassword" placeholder="" required style="padding:10px;border:1px solid #e5e7eb;border-radius:8px;font-size:0.95rem;transition:border-color 0.3s;" />
                                    </div>
                                    <div style="display:flex;flex-direction:column;">
                                        <label style="font-size:0.875rem;font-weight:600;color:#0b1220;margin-bottom:6px;">Role</label>
                                        <select name="role" required style="padding:10px;border:1px solid #e5e7eb;border-radius:8px;font-size:0.95rem;background:#fff;cursor:pointer;transition:border-color 0.3s;">
                                            <option value="">Select a role</option>
                                            <option value="ROLE_ETUDIANT">Student</option>
                                            <option value="ROLE_TUTOR">Tutor</option>
                                            <option value="ROLE_ADMIN">Admin</option>
                                        </select>
                                    </div>
