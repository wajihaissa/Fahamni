{% extends 'base.html.twig' %}

{% block title %}Users Management - FAHIMNI Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root{
            --bg:#f4f7fb;
            --nav:#0b1220;
            --card:#ffffff;
            --muted:#64748b;
            --text:#0b1220;
            --text-primary:#0f172a;
            --border:#dbe3ee;
            --primary:#2563eb;
            --primary-grad:linear-gradient(135deg,#2563eb 0%,#0ea5e9 100%);
            --radius:14px;
            --shadow:0 12px 28px rgba(15,23,42,0.08);
        }

        body{
            font-family:Inter,system-ui,-apple-system,'Segoe UI',Roboto,Arial,sans-serif;
            background:
                radial-gradient(circle at 10% -10%, rgba(37,99,235,.16), transparent 38%),
                radial-gradient(circle at 100% 0, rgba(14,165,233,.14), transparent 32%),
                var(--bg);
            color:var(--muted);
        }

        .main-content {
            margin-left: 280px;
            min-height: 100vh;
            background: transparent;
        }

        .top-navbar {
            height: 70px;
            background: rgba(255,255,255,0.9);
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            position: sticky;
            top: 0;
            z-index: 20;
            backdrop-filter: blur(10px);
        }

        .navbar-left {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .sidebar-toggle {
            width: 36px;
            height: 36px;
            border: 1px solid var(--border);
            border-radius: 10px;
            background: #fff;
            color: #475569;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all .18s ease;
        }
        .sidebar-toggle:hover {
            color: var(--primary);
            border-color: #bfdbfe;
            transform: translateY(-1px);
        }

        .page-title {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .admin-container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .admin-header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
        }

        .btn-primary{background:var(--primary-grad);color:#fff;border:none;padding:10px 15px;border-radius:12px;font-weight:700;display:inline-flex;align-items:center;gap:8px;text-decoration:none;box-shadow:0 10px 22px rgba(37,99,235,.3)}

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 28px rgba(37,99,235,.35);
        }

        .card{background:rgba(255,255,255,.94);border-radius:var(--radius);box-shadow:var(--shadow);padding:16px;overflow:hidden;border:1px solid var(--border);backdrop-filter:blur(6px)}

        .table-container {
            overflow-x: auto;
            background: transparent;
            padding: 0;
            border-radius: 14px;
            margin-bottom: 12px;
        }

        .data-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
            background: transparent;
        }

        .data-table th,
        .data-table td {
            text-align: left;
            padding: 14px 12px;
            vertical-align: middle;
        }

        .data-table thead th {
            background: transparent;
            font-weight: 700;
            color: var(--muted);
            font-size: 0.78rem;
            text-transform: uppercase;
            letter-spacing: .05em;
            padding: 12px 16px 16px 16px;
            border-bottom: none;
        }

        .data-table tbody tr {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: 12px;
            box-shadow: 0 8px 18px rgba(15,23,42,.06);
            transition: all 0.18s ease;
            height: 74px;
            display: table-row;
        }

        .data-table tbody tr:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 28px rgba(15,23,42,.12);
            border-color: #bfdbfe;
        }

        .data-table tbody tr td {
            background: transparent;
            border: none;
            padding: 0 16px;
            vertical-align: middle;
            height: 100%;
            font-size: 0.95rem;
        }

        .data-table tbody tr td:first-child { border-top-left-radius: 10px; border-bottom-left-radius: 10px; }
        .data-table tbody tr td:last-child { border-top-right-radius: 10px; border-bottom-right-radius: 10px; }

        .user-cell {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-avatar{
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: linear-gradient(135deg, #2563eb 0%, #0ea5e9 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-weight: 700;
            font-size: 14px;
            flex-shrink: 0;
        }

        .user-cell span {
            font-weight: 700;
            color: var(--text-primary);
        }

        .badge {
            display: inline-block;
            padding: 0.35rem 0.85rem;
            border-radius: 999px;
            font-size: 0.73rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.04em;
            white-space: nowrap;
        }

        .badge-active {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
            box-shadow: none;
        }

        .badge-inactive {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            box-shadow: none;
        }

        .badge-student {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
            box-shadow: none;
        }

        .badge-tutor {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
            box-shadow: none;
        }

        .badge-admin {
            background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
            color: #5b21b6;
            box-shadow: none;
        }
        .badge-neutral {
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            color: #334155;
            box-shadow: none;
        }

        .actions {
            display: flex;
            gap: 0.6rem;
            justify-content: flex-end;
            align-items: center;
        }

        .btn-action {
            width: 34px;
            height: 34px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.18s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 0.86rem;
        }

        .btn-view {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
            box-shadow: none;
        }

        .btn-edit {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
            box-shadow: 0 4px 12px rgba(146, 64, 14, 0.12);
        }

        .btn-delete {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            box-shadow: none;
        }
        .btn-status-on {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
            box-shadow: none;
        }
        .btn-status-off {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
            box-shadow: none;
        }
        .btn-activity-on {
            background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
            color: #1e40af;
            box-shadow: none;
        }
        .btn-activity-off {
            background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
            color: #334155;
            box-shadow: none;
        }

        .btn-action:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 18px rgba(15,23,42,.12);
        }
        .btn-action:disabled {
            opacity: 0.45;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .alert{padding:12px;border-radius:12px;margin-bottom:12px;font-weight:600}

        .alert-success {
            background: #ecfdf3;
            color: #065f46;
            border: 1px solid #86efac;
        }

        .alert-error {
            background: #fff1f2;
            color: #991b1b;
            border: 1px solid #fda4af;
        }

        .empty{text-align:center;padding:28px;color:var(--muted)}
        .toolbar {
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            align-items: center;
            margin-bottom: 1.2rem;
            flex-wrap: wrap;
            padding: 0.25rem 0;
        }
        .filters {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        .filter-pill {
            text-decoration: none;
            padding: 0.45rem 0.9rem;
            border-radius: 999px;
            border: 1px solid var(--border);
            color: var(--muted);
            font-weight: 600;
            font-size: 0.86rem;
            background: #fff;
            transition: all 0.18s ease;
        }
        .filter-pill:hover {
            border-color: #bfdbfe;
            transform: translateY(-1px);
        }
        .filter-pill.active {
            background: var(--primary-grad);
            color: #fff;
            border-color: transparent;
        }
        .bulk-panel {
            display: flex;
            gap: 0.6rem;
            align-items: center;
            flex-wrap: wrap;
        }
        .bulk-panel select {
            border: 1px solid var(--border);
            border-radius: 11px;
            padding: 0.5rem 0.65rem;
            background: #fff;
            color: var(--text-primary);
        }
        .bulk-btn {
            border: 0;
            border-radius: 11px;
            padding: 0.55rem 0.95rem;
            font-weight: 600;
            color: #fff;
            background: var(--primary-grad);
            cursor: pointer;
            transition: transform 0.18s ease, box-shadow 0.18s ease;
        }
        .bulk-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 24px rgba(37,99,235,.28);
        }
        .select-col { width: 44px; text-align: center !important; }
        .select-col input { width: 16px; height: 16px; cursor: pointer; }

        @media (max-width: 1100px) {
            .main-content { margin-left: 0; }
            .admin-container { padding: 1rem; }
            .admin-header { flex-direction: column; align-items: flex-start; gap: 0.8rem; }
            .toolbar { align-items: stretch; }
        }

        @media (max-width: 760px) {
            .data-table th, .data-table td { font-size: 0.85rem; }
            .data-table tbody tr td { padding: 0 10px; }
            .user-avatar { width: 34px; height: 34px; font-size: 12px; }
            .btn-action { width: 34px; height: 34px; font-size: 0.85rem; }
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'back/_sidebar.html.twig' %}
    <div class="main-content">
        <header class="top-navbar">
            <div class="navbar-left">
                <button class="sidebar-toggle"><i class="fas fa-bars"></i></button>
                <h1 class="page-title">Users Management</h1>
            </div>
            <div class="navbar-right"></div>
        </header>

        <div class="admin-container">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    <i class="fas fa-{% if type == 'success' %}check-circle{% else %}exclamation-circle{% endif %}"></i>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="admin-header">
            <h1>Users Management</h1>
            <a href="{{ path('admin_users_create') }}" class="btn-primary">
                <i class="fas fa-plus"></i> Add New User
            </a>
        </div>

        <div class="card">
            <div class="toolbar">
                <div class="filters">
                    <a class="filter-pill {{ (currentFilter|default('all')) == 'all' ? 'active' : '' }}" href="{{ path('admin_users_index', { filter: 'all' }) }}">All</a>
                    <a class="filter-pill {{ (currentFilter|default('all')) == 'active' ? 'active' : '' }}" href="{{ path('admin_users_index', { filter: 'active' }) }}">Active</a>
                    <a class="filter-pill {{ (currentFilter|default('all')) == 'inactive' ? 'active' : '' }}" href="{{ path('admin_users_index', { filter: 'inactive' }) }}">Inactive</a>
                    <a class="filter-pill {{ (currentFilter|default('all')) == 'suspended' ? 'active' : '' }}" href="{{ path('admin_users_index', { filter: 'suspended' }) }}">Suspended</a>
                </div>
                <form id="bulkActionForm" class="bulk-panel" method="POST" action="{{ path('admin_users_bulk_status') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('bulk_users_status') }}">
                    <select name="bulk_action" required>
                        <option value="">Bulk action...</option>
                        <option value="activate">Activate selected</option>
                        <option value="deactivate">Deactivate selected</option>
                    </select>
                    <button type="submit" class="bulk-btn" onclick="return confirm('Apply this action to selected users?');">Apply</button>
                </form>
            </div>

            {% if users|length > 0 %}
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th class="select-col"><input type="checkbox" id="selectAllUsers"></th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Account</th>
                                <th>Activity</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                {% set roleLabel = 'Student' %}
                                {% set roleClass = 'badge-student' %}
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    {% set roleLabel = 'Admin' %}
                                    {% set roleClass = 'badge-admin' %}
                                {% elseif 'ROLE_TUTOR' in user.roles %}
                                    {% set roleLabel = 'Tutor' %}
                                    {% set roleClass = 'badge-tutor' %}
                                {% endif %}
                                <tr>
                                    <td class="select-col">
                                        <input type="checkbox" class="user-checkbox" form="bulkActionForm" name="user_ids[]" value="{{ user.id }}">
                                    </td>
                                    <td>
                                        <div class="user-cell">
                                            <div class="user-avatar">
                                                {%- set parts = user.fullName|split(' ') -%}
                                                {%- if parts|length >= 2 -%}
                                                    {{ (parts[0][0:1])|upper }}{{ (parts[1][0:1])|upper }}
                                                {%- else -%}
                                                    {{ (user.fullName[0:1])|upper }}
                                                {%- endif -%}
                                            </div>
                                            <span>{{ user.fullName }}</span>
                                        </div>
                                    </td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        <span class="badge {{ roleClass }}">
                                            {{ roleLabel|lower }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge {% if user.status %}badge-active{% else %}badge-inactive{% endif %}">
                                            {{ user.status ? 'Active' : 'Inactive' }}
                                        </span>
                                    </td>
                                    <td>
                                        {% set profile = user.profile %}
                                        {% if profile %}
                                            <span class="badge {% if profile.isActive %}badge-active{% else %}badge-neutral{% endif %}">
                                                {{ profile.isActive ? 'Active' : 'Inactive' }}
                                            </span>
                                        {% else %}
                                            <span class="badge badge-neutral">N/A</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ user.createdAt|date('M d, Y') }}</td>
                                    <td>
                                        <div class="actions">
                                            <form method="POST" action="{{ path('admin_users_toggle_status', {id: user.id}) }}" style="display:inline-block; margin:0;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_status_' ~ user.id) }}">
                                                <button type="submit" class="btn-action {% if user.status %}btn-status-off{% else %}btn-status-on{% endif %}" title="{% if user.status %}Deactivate account{% else %}Activate account{% endif %}" {% if app.user and app.user.id == user.id and user.status %}disabled{% endif %}>
                                                    <i class="fas {% if user.status %}fa-user-slash{% else %}fa-user-check{% endif %}"></i>
                                                </button>
                                            </form>
                                            {% if user.profile %}
                                            <form method="POST" action="{{ path('admin_users_toggle_activity', {id: user.id}) }}" style="display:inline-block; margin:0;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_activity_' ~ user.id) }}">
                                                <button type="submit" class="btn-action {% if user.profile.isActive %}btn-activity-off{% else %}btn-activity-on{% endif %}" title="{% if user.profile.isActive %}Set inactive{% else %}Set active{% endif %}" {% if not user.status %}disabled{% endif %}>
                                                    <i class="fas {% if user.profile.isActive %}fa-power-off{% else %}fa-bolt{% endif %}"></i>
                                                </button>
                                            </form>
                                            {% endif %}
                                            <a href="{{ path('admin_users_show', {id: user.id}) }}" class="btn-action btn-view" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            {# Edit/modify removed per request #}
                                            <form method="POST" action="{{ path('admin_users_delete', {id: user.id}) }}" style="display:inline-block; margin:0;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn-action btn-delete" title="Delete" onclick="return confirm('Delete this user?');">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="empty">
                    <i class="fas fa-users" style="font-size: 3rem; color: var(--border-color); display: block; margin-bottom: 1rem;"></i>
                    <p>No users found</p>
                </div>
            {% endif %}

        </div>
        </div>
    </div>

    <script>
        (function () {
            var selectAll = document.getElementById('selectAllUsers');
            var checkboxes = document.querySelectorAll('.user-checkbox');
            if (selectAll) {
                selectAll.addEventListener('change', function () {
                    checkboxes.forEach(function (cb) { cb.checked = selectAll.checked; });
                });
            }

            var bulkPanel = document.querySelector('.bulk-panel');
            if (bulkPanel) {
                bulkPanel.addEventListener('submit', function (e) {
                    var action = bulkPanel.querySelector('select[name="bulk_action"]').value;
                    if (!action) {
                        e.preventDefault();
                        alert('Please choose a bulk action.');
                        return;
                    }
                    var selected = document.querySelectorAll('.user-checkbox:checked');
                    if (selected.length === 0) {
                        e.preventDefault();
                        alert('Please select at least one user.');
                        return;
                    }
                });
            }
        })();
    </script>
{% endblock %}
