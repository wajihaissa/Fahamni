    height: 520px;
    max-height: calc(100vh - 24px);
    background: var(--card-bg, #fff);
    border-radius: 20px;
    box-shadow: 0 12px 48px rgba(0,0,0,0.15);
    border: 1px solid var(--border-color, #eaeaea);
    flex-direction: column;
    overflow: hidden;
}
.dark-theme .chatbot-assistant-panel {
    box-shadow: 0 12px 48px rgba(0,0,0,0.4);
}
.chatbot-assistant-root.is-open .chatbot-assistant-panel {
    display: flex;
}
.chatbot-assistant-root.is-open .chatbot-assistant-toggle {
    display: none;
}
