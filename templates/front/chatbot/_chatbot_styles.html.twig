    height: 8px;
    border-radius: 50%;
    background: var(--text-light, #999);
    animation: chatbot-typing 1.2s ease-in-out infinite;
}
.chatbot-msg-typing span:nth-child(2) { animation-delay: 0.2s; }
.chatbot-msg-typing span:nth-child(3) { animation-delay: 0.4s; }
