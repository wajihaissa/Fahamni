.chatbot-assistant-root {
    position: fixed;
    bottom: 8px;
    right: 24px;
    z-index: 9998;
    font-family: var(--font-family, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif);
}
.chatbot-assistant-toggle {
    width: 56px;
    height: 56px;
    border-radius: 50%;
