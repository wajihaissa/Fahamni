<body class="light-theme">
    <!-- Navbar -->
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">FAHIMNI</div>
                <nav>
                    <ul>
                        <li><a href="#" class="nav-link">Home</a></li>
                        <li><a href="#" class="nav-link active">Articles</a></li>
                        <li><a href="#" class="nav-link">Courses</a></li>
                        <li><a href="#" class="nav-link">About</a></li>
                    </ul>
                </nav>
                <div class="auth-buttons">
                    <button class="theme-toggle" id="themeToggle">
                        <i class="fas fa-moon"></i>
                    </button>
                    <button class="mobile-menu-btn" id="mobileMenuBtn">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="#" class="btn btn-secondary">Login</a>
                    <a href="#" class="btn btn-primary">Sign Up</a>
                </div>
            </div>
        </div>
    </header>

    {# Flash Messages #}
    {% for label, messages in app.flashes %}
        <div class="flash-messages">
            {% for message in messages %}
                <div class="flash-msg {{ label }}">
                    <i class="fas {{ label == 'success' ? 'fa-check-circle' : 'fa-exclamation-circle' }}"></i>
                    {{ message }}
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    <main class="articles-main">
        <div class="hero-banner">
            <div class="container">
                <div class="articles-header">
                    <div class="hero-left">
                        <h1><i class="fas fa-book-reader"></i> Espace Etudiant</h1>
                        <p class="hero-subtitle">Decouvrez les articles educatifs publies par nos tuteurs</p>
                    </div>
                    <div class="hero-stats">
                        <div class="hero-stat">
                            <span class="hero-stat-number">{{ blogs|length }}</span>
                            <span class="hero-stat-label">Articles</span>
                        </div>
                        <div class="hero-stat-divider"></div>
                        <div class="hero-stat">
                            <span class="hero-stat-number" id="heroTotalLikes">{{ blogs|reduce((total, b) => total + b.likesCount, 0) }}</span>
                            <span class="hero-stat-label">Likes</span>
                        </div>
                        <div class="hero-stat-divider"></div>
                        <div class="hero-stat">
                            <span class="hero-stat-number" id="heroTotalComments">{{ blogs|reduce((total, b) => total + b.commentsCount, 0) }}</span>
                            <span class="hero-stat-label">Commentaires</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container articles-content">
            <div class="articles-filters">
                <div class="filter-tabs">
                    <button class="filter-btn active" data-filter="all">All Articles</button>
                    <button class="filter-btn" data-filter="mathematics">Mathematics</button>
                    <button class="filter-btn" data-filter="science">Science</button>
                    <button class="filter-btn" data-filter="computer-science">Computer Science</button>
                    <button class="filter-btn" data-filter="study-tips">Study Tips</button>
                </div>
                <div class="filter-search">
                    <input type="text" placeholder="Search articles..." id="searchInput">
                    <button class="search-btn"><i class="fas fa-search"></i></button>
                </div>
            </div>

            <div class="articles-grid" id="articlesGrid">
                {% for blog in blogs %}
                    <article class="article-card"
                             data-category="{{ blog.category|lower|replace({' ': '-'}) }}"
                             data-article-id="{{ blog.id }}">
                        {% if blog.images and blog.images|length > 0 %}
                            <div class="article-image">
                                <img src="/uploads/images/{{ blog.images[0] }}"
                                     alt="{{ blog.titre }}"
                                     onerror="this.src='https://images.pexels.com/photos/1181244/pexels-photo-1181244.jpeg'">
                                {% if blog.publishedAt and date() < blog.publishedAt|date_modify('+7 days') %}
                                    <span class="article-badge new-badge"><i class="fas fa-star"></i> Nouveau</span>
                                {% elseif blog.likesCount >= 5 %}
                                    <span class="article-badge popular-badge"><i class="fas fa-fire"></i> Populaire</span>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="article-image">
                                <img src="https://images.pexels.com/photos/1181244/pexels-photo-1181244.jpeg"
                                     alt="{{ blog.titre }}">
                                {% if blog.publishedAt and date() < blog.publishedAt|date_modify('+7 days') %}
                                    <span class="article-badge new-badge"><i class="fas fa-star"></i> Nouveau</span>
                                {% elseif blog.likesCount >= 5 %}
                                    <span class="article-badge popular-badge"><i class="fas fa-fire"></i> Populaire</span>
                                {% endif %}
                            </div>
                        {% endif %}

                        <div class="article-content">
                            <div class="article-meta">
                                <span class="article-category">
                                    {{ blog.category ?? 'General' }}
                                </span>
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    <span class="reading-time">
                                        <i class="fas fa-clock"></i> {{ max(1, (blog.content|length / 1000)|round(0, 'ceil')) }} min
                                    </span>
                                    <span class="article-date">{{ blog.publishedAt|date('d/m/Y') }}</span>
                                </div>
                            </div>

                            <h2 class="article-title" onclick="window.location.href='{{ path('app_blog_show', {id: blog.id}) }}'">
                                {{ blog.titre }}
                            </h2>

                            <p class="article-excerpt">
                                {{ blog.content|length > 150 ? blog.content|slice(0, 150) ~ '...' : blog.content }}
                            </p>

                            <div class="article-footer">
                                <div class="author-info">
                                    <div class="author-avatar">
                                        {% if blog.publisher.fullName %}
                                            {{ blog.publisher.fullName|slice(0, 2)|upper }}
                                        {% else %}
                                            {{ blog.publisher.email|slice(0, 2)|upper }}
                                        {% endif %}
                                    </div>
                                    <span class="author-name">
                                        {% if blog.publisher.fullName %}
                                            {{ blog.publisher.fullName }}
                                        {% else %}
                                            {{ blog.publisher.email|split('@')[0] }}
                                        {% endif %}
                                    </span>
                                </div>
                            </div>

                            {# SECTION INTERACTIONS - Like et Commentaires (pas d'edit/delete pour etudiant) #}
                            <div class="interactions-section">
                                <div class="interaction-buttons">
                                    {# Bouton Like #}
                                    <form class="like-form" data-blog-id="{{ blog.id }}" method="post" action="{{ path('app_interaction_like', {id: blog.id}) }}" style="margin: 0;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('like' ~ blog.id) }}">
                                        <button type="submit" class="interaction-btn like-btn"
                                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                                            <i class="fas fa-heart"></i>
                                            <span>Like</span>
                                            <span class="count">{{ blog.likesCount }}</span>
                                        </button>
                                    </form>

                                    {# Bouton Commentaires #}
                                    <button class="interaction-btn comment-toggle-btn"
                                            onclick="toggleComments({{ blog.id }})"
                                            style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                                        <i class="fas fa-comment"></i>
                                        <span>Comments</span>
                                        <span class="count">{{ blog.commentsCount }}</span>
                                    </button>
                                </div>

                                {# Section des commentaires #}
                                <div id="comments-{{ blog.id }}" class="comments-section" style="display: none; margin-top: 8px; background: var(--bg-secondary); padding: 10px; border-radius: 10px;">
                                    {# Formulaire d'ajout de commentaire #}
                                    <form class="comment-form" data-blog-id="{{ blog.id }}" method="post" action="{{ path('app_interaction_comment', {id: blog.id}) }}"
                                          style="margin-bottom: 8px;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('comment' ~ blog.id) }}">
                                        <div style="display: flex; gap: 8px; align-items: center;">
                                            <textarea name="comment"
                                                      placeholder="Votre commentaire..."
                                                      required
                                                      style="flex: 1; padding: 8px 14px; border: 1px solid var(--border-color);
                                                             border-radius: 10px; font-size: 12px; resize: none;
                                                             height: 36px; font-family: inherit; background: var(--card-bg);
                                                             color: var(--text-color); transition: border-color 0.2s ease;"
                                                      onfocus="this.style.borderColor='var(--primary-color)'"
                                                      onblur="this.style.borderColor='var(--border-color)'"></textarea>
                                            <button type="submit"
                                                    style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                                                           color: white; border: none; padding: 8px 12px;
                                                           border-radius: 10px; cursor: pointer; font-size: 12px; flex-shrink: 0;
                                                           transition: all 0.2s ease; box-shadow: 0 2px 8px rgba(67,97,238,0.3);">
                                                <i class="fas fa-paper-plane"></i>
                                            </button>
                                        </div>
                                    </form>

                                    {# Liste des commentaires #}
                                    <div class="comments-list" style="max-height: 180px; overflow-y: auto;">
                                        {% if interactions[blog.id] is defined and interactions[blog.id].comments|length > 0 %}
                                            <div style="font-size: 12px; color: var(--text-light); margin-bottom: 8px; font-weight: 600;">
                                                {{ interactions[blog.id].comments|length }} commentaire{{ interactions[blog.id].comments|length > 1 ? 's' : '' }}
                                            </div>
                                            {% for comment in interactions[blog.id].comments %}
                                                <div class="comment-item {{ app.user and app.user == comment.innteractor ? 'my-comment' : '' }}">
                                                    <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 4px;">
                                                        <div style="display: flex; gap: 8px; align-items: center; flex: 1;">
                                                            <div style="width: 26px; height: 26px; border-radius: 8px;
                                                                        background: linear-gradient(135deg, {{ app.user and app.user == comment.innteractor ? '#10b981, #059669' : '#667eea, #764ba2' }});
                                                                        color: white; display: flex; align-items: center;
                                                                        justify-content: center; font-weight: bold; font-size: 9px; flex-shrink: 0;">
                                                                {% if comment.innteractor.fullName %}
                                                                    {{ comment.innteractor.fullName|slice(0, 2)|upper }}
                                                                {% else %}
                                                                    {{ comment.innteractor.email|slice(0, 2)|upper }}
                                                                {% endif %}
                                                            </div>
                                                            <div style="flex: 1; min-width: 0;">
                                                                <div style="font-weight: 600; color: var(--primary-color); font-size: 12px; line-height: 1.2; display: flex; align-items: center; gap: 6px;">
                                                                    {% if comment.innteractor.fullName %}
                                                                        {{ comment.innteractor.fullName }}
                                                                    {% else %}
                                                                        {{ comment.innteractor.email|split('@')[0] }}
                                                                    {% endif %}
                                                                    {% if app.user and app.user == comment.innteractor %}
                                                                        <span class="owner-badge comment-owner" style="font-size: 9px; padding: 1px 6px;">Vous</span>
                                                                    {% endif %}
                                                                </div>
                                                                <div style="font-size: 10px; color: var(--text-light);">
                                                                    {{ comment.createdAt|date('d/m/Y H:i') }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {% if app.user and app.user == comment.innteractor %}
                                                        <form class="delete-comment-form" method="post"
                                                              action="{{ path('app_interaction_delete', {id: comment.id}) }}"
                                                              style="margin: 0;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                                            <button type="submit" class="delete-comment-btn" title="Supprimer" style="font-size: 10px; padding: 2px 8px;">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                                        {% endif %}
                                                    </div>
                                                    <div style="color: var(--text-color); line-height: 1.5; font-size: 13px; margin-left: 34px; word-wrap: break-word;">
                                                        {{ comment.comment }}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        {% else %}
                                            <p style="text-align: center; color: var(--text-light); font-style: italic; font-size: 12px; padding: 10px 0;">
                                                Aucun commentaire
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                {% endfor %}

                {# Message si aucun article #}
                {% if blogs is empty %}
                    <div style="grid-column: 1 / -1; text-align: center; padding: 60px 20px;">
                        <i class="fas fa-newspaper empty-float" style="font-size: 48px; color: var(--text-light); opacity: 0.4; margin-bottom: 15px; display: block;"></i>
                        <h3 style="color: var(--text-color); margin-bottom: 8px; font-size: 18px;">Aucun article pour le moment</h3>
                        <p style="color: var(--text-light);">Les tuteurs n'ont pas encore publie d'articles.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>

    <footer class="site-footer">
        <div class="container">
            <p>FAHIMNI - Plateforme educative</p>
        </div>
    </footer>

    <script>
        // Theme and Navbar
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('themeToggle');
            const body = document.body;

            const savedTheme = localStorage.getItem('theme') || 'light';
            body.classList.toggle('dark-theme', savedTheme === 'dark');
            updateThemeIcon(savedTheme);

            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    const isDark = body.classList.toggle('dark-theme');
                    localStorage.setItem('theme', isDark ? 'dark' : 'light');
                    updateThemeIcon(isDark ? 'dark' : 'light');
                });
            }

            function updateThemeIcon(theme) {
                if (themeToggle) {
                    const icon = themeToggle.querySelector('i');
                    if (icon) {
                        icon.className = theme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
                    }
                }
            }

            // Mobile menu
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const nav = document.querySelector('nav');
            if (mobileMenuBtn && nav) {
                mobileMenuBtn.addEventListener('click', function() {
                    nav.classList.toggle('active');
                    this.querySelector('i').className = nav.classList.contains('active')
                        ? 'fas fa-times' : 'fas fa-bars';
                });
            }

            // Filtrage par categorie
            const filterButtons = document.querySelectorAll('.filter-btn');
            const articleCards = document.querySelectorAll('.article-card');
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.querySelector('.search-btn');

            filterButtons.forEach(button => {
                button.addEventListener('click', function() {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    const filterCategory = this.getAttribute('data-filter');
                    if (searchInput) searchInput.value = '';

                    articleCards.forEach(card => {
                        const cardCategory = card.getAttribute('data-category');
                        if (filterCategory === 'all' || cardCategory === filterCategory) {
                            card.style.display = 'flex';
                            card.style.animation = 'fadeIn 0.5s ease';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });

            // Recherche
            function performSearch() {
                const searchTerm = searchInput ? searchInput.value.toLowerCase().trim() : '';
                if (searchTerm !== '') {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    if (filterButtons[0]) filterButtons[0].classList.add('active');
                }
                articleCards.forEach(card => {
                    const title = card.querySelector('.article-title')?.textContent.toLowerCase() || '';
                    const excerpt = card.querySelector('.article-excerpt')?.textContent.toLowerCase() || '';
                    const category = card.querySelector('.article-category')?.textContent.toLowerCase() || '';
                    if (searchTerm === '' || title.includes(searchTerm) || excerpt.includes(searchTerm) || category.includes(searchTerm)) {
                        card.style.display = 'flex';
                        card.style.animation = 'fadeIn 0.5s ease';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            if (searchBtn) {
                searchBtn.addEventListener('click', function(e) { e.preventDefault(); performSearch(); });
            }
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) { if (e.key === 'Enter') { e.preventDefault(); performSearch(); } });
                searchInput.addEventListener('input', performSearch);
            }

            // ===== AJAX : Like =====
            document.querySelectorAll('form.like-form').forEach(function(form) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const btn = form.querySelector('button[type="submit"]');
                    const countEl = btn.querySelector('.count');
                    btn.disabled = true;

                    fetch(form.action, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' },
                        body: new FormData(form),
                        credentials: 'same-origin',
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            if (countEl) countEl.textContent = data.likesCount;
                            btn.style.opacity = data.liked ? '1' : '0.65';
                            btn.querySelector('i').style.animation = 'heartBeat 0.6s ease';
                            setTimeout(() => { if (btn.querySelector('i')) btn.querySelector('i').style.animation = ''; }, 700);
                            showToast(data.message, 'success');
                            const heroLikes = document.getElementById('heroTotalLikes');
                            if (heroLikes) heroLikes.textContent = parseInt(heroLikes.textContent) + (data.liked ? 1 : -1);
                        }
                    })
                    .catch(() => showToast('Erreur rseau', 'error'))
                    .finally(() => { btn.disabled = false; });
                });
            });

            // ===== AJAX : Commentaire =====
            document.querySelectorAll('form.comment-form').forEach(function(form) {
                // Ctrl+Entre pour envoyer, Entre seul = nouvelle ligne
                const ta = form.querySelector('textarea[name="comment"]');
                if (ta) {
                    ta.addEventListener('keydown', function(e) {
                        if (e.key === 'Enter' && (e.ctrlKey || e.metaKey)) {
                            e.preventDefault();
                            form.dispatchEvent(new Event('submit', { bubbles: true, cancelable: true }));
                        }
                    });
                }

                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const blogId = form.dataset.blogId;
                    const textarea = form.querySelector('textarea[name="comment"]');
                    const submitBtn = form.querySelector('button[type="submit"]');
                    submitBtn.disabled = true;

                    fetch(form.action, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' },
                        body: new FormData(form),
                        credentials: 'same-origin',
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            textarea.value = '';
                            const card = form.closest('[data-article-id]');
                            if (card) {
                                const commentCountEl = card.querySelector('.comment-toggle-btn .count');
                                if (commentCountEl) commentCountEl.textContent = data.commentsCount;
                            }
                            const commentsList = document.querySelector('#comments-' + blogId + ' .comments-list');
                            if (commentsList) {
                                const noComment = commentsList.querySelector('p[style*="italic"]');
                                if (noComment) noComment.remove();
                                const c = data.comment;
                                const div = document.createElement('div');
                                div.className = 'comment-item my-comment';
                                div.style.animation = 'fadeInUp 0.3s ease';
                                div.innerHTML = `
                                    <div style="display:flex;justify-content:space-between;align-items:flex-start;margin-bottom:4px;">
                                        <div style="display:flex;gap:8px;align-items:center;flex:1;">
                                            <div style="width:26px;height:26px;border-radius:8px;background:linear-gradient(135deg,#10b981,#059669);color:white;display:flex;align-items:center;justify-content:center;font-weight:bold;font-size:9px;flex-shrink:0;">${escHtml(c.initials)}</div>
                                            <div style="flex:1;min-width:0;">
                                                <div style="font-weight:600;color:var(--primary-color);font-size:12px;line-height:1.2;display:flex;align-items:center;gap:6px;">
                                                    ${escHtml(c.author)}
                                                    <span class="owner-badge comment-owner" style="font-size:9px;padding:1px 6px;">Vous</span>
                                                </div>
                                                <div style="font-size:10px;color:var(--text-light);">${escHtml(c.date)}</div>
                                            </div>
                                        </div>
                                        <form class="delete-comment-form" method="post" action="/interaction/comment/${c.id}/delete" style="margin:0;">
                                            <input type="hidden" name="_token" value="">
                                            <button type="submit" class="delete-comment-btn" title="Supprimer" style="font-size:10px;padding:2px 8px;"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </div>
                                    <div style="color:var(--text-color);line-height:1.5;font-size:13px;margin-left:34px;word-wrap:break-word;">${escHtml(c.text)}</div>`;
                                commentsList.insertBefore(div, commentsList.firstChild);
                                attachDeleteForm(div.querySelector('.delete-comment-form'), blogId);
                                const countLabel = commentsList.closest('.comments-section').querySelector('div[style*="margin-bottom: 8px"]');
                                if (countLabel) {
                                    const n = commentsList.querySelectorAll('.comment-item').length;
                                    countLabel.textContent = n + ' commentaire' + (n > 1 ? 's' : '');
                                }
                            }
                            showToast('Commentaire ajout !', 'success');
                            const heroComments = document.getElementById('heroTotalComments');
                            if (heroComments) heroComments.textContent = parseInt(heroComments.textContent) + 1;
                            // Fermer la section automatiquement
                            const openSection = document.getElementById('comments-' + blogId);
                            if (openSection) openSection.style.display = 'none';
                        } else {
                            showToast(data.message || 'Erreur', 'error');
                        }
                    })
                    .catch(() => showToast('Erreur rseau', 'error'))
                    .finally(() => { submitBtn.disabled = false; });
                });
            });

            // ===== AJAX : Suppression commentaire =====
            function attachDeleteForm(form, blogId) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    if (!confirm('Supprimer ce commentaire ?')) return;
                    fetch(form.action, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' },
                        body: new FormData(form),
                        credentials: 'same-origin',
                    })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            const item = form.closest('.comment-item');
                            if (item) item.remove();
                            const card = document.querySelector('[data-article-id="' + blogId + '"]');
                            if (card) {
                                const commentCountEl = card.querySelector('.comment-toggle-btn .count');
                                if (commentCountEl) commentCountEl.textContent = data.commentsCount;
                            }
                            const heroComments = document.getElementById('heroTotalComments');
                            if (heroComments) heroComments.textContent = Math.max(0, parseInt(heroComments.textContent) - 1);
                            showToast('Commentaire supprim', 'success');
                        }
                    })
                    .catch(() => showToast('Erreur rseau', 'error'));
                });
            }

            document.querySelectorAll('form.delete-comment-form').forEach(function(form) {
                const blogId = form.closest('[data-article-id]')?.dataset.articleId;
                attachDeleteForm(form, blogId);
            });

            // Toast
            function showToast(message, type) {
                const container = document.querySelector('.flash-messages') || (() => {
                    const c = document.createElement('div');
                    c.className = 'flash-messages';
                    document.body.appendChild(c);
                    return c;
                })();
                const toast = document.createElement('div');
                toast.className = 'flash-msg ' + type;
                toast.innerHTML = '<i class="fas ' + (type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle') + '"></i> ' + escHtml(message);
                container.appendChild(toast);
                setTimeout(() => toast.remove(), 3600);
            }

            function escHtml(str) {
                return String(str).replace(/[&<>"']/g, s => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[s]));
            }
        });

        // Afficher/cacher les commentaires
        function toggleComments(blogId) {
            const section = document.getElementById('comments-' + blogId);
            if (section) {
                section.style.display = (section.style.display === 'none' || section.style.display === '') ? 'block' : 'none';
            }
        }
    </script>
</body>
