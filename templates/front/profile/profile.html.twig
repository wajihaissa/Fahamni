{% extends 'front/base_front.html.twig' %}

{% block title %}Profile - FAHIMNI{% endblock %}

{% block current_page %}profile{% endblock %}

{% block content %}
<style>
/* PROFILE HERO SECTION */
.profile-hero {
    padding: 160px 0 80px;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.profile-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" fill="white" opacity="0.1"><polygon points="0,100 1000,0 1000,100"/></svg>');
    background-size: cover;
}

.profile-header {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
}

.avatar-container {
    position: relative;
}

.avatar-image {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    background: white;
    color: var(--primary-color);
    font-size: 46px;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    border: 4px solid rgba(255,255,255,0.2);
    transition: transform 0.3s ease;
}

.avatar-image:hover {
    transform: scale(1.05);
}

.profile-info h1 {
    font-size: 36px;
    margin-bottom: 10px;
    font-weight: 700;
}

.profile-info p {
    opacity: 0.9;
    margin-bottom: 20px;
    font-size: 18px;
}

.profile-badge {
    display: inline-block;
    background: rgba(255,255,255,0.2);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    margin-top: 10px;
    backdrop-filter: blur(10px);
}

/* MAIN PROFILE CONTAINER */
.profile-container {
    margin-top: -40px;
    position: relative;
    z-index: 10;
    padding: 0 20px;
}

.profile-card {
    max-width: 1200px;
    margin: 0 auto;
    background: var(--card-bg);
    border-radius: 24px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    overflow: hidden;
    border: 1px solid var(--border-color);
    min-height: 600px;
    display: flex;
}

/* SIDEBAR NAVIGATION */
.profile-sidebar {
    width: 280px;
    background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
    border-right: 1px solid var(--border-color);
    padding: 40px 0;
    display: flex;
    flex-direction: column;
}

.sidebar-header {
    padding: 0 30px 30px;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 30px;
}

.sidebar-title {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 8px;
}

.sidebar-subtitle {
    color: #64748b;
    font-size: 14px;
}

.sidebar-nav {
    flex: 1;
    padding: 0 20px;
}

.nav-item {
    display: block;
    padding: 16px 20px;
    margin-bottom: 8px;
    border-radius: 12px;
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    background: none;
    width: 100%;
    text-align: left;
    font-size: 15px;
    position: relative;
}

.nav-item:hover {
    background: rgba(var(--primary-color-rgb), 0.1);
    color: var(--primary-color);
    transform: translateX(4px);
}

.nav-item.active {
    background: var(--primary-color);
    color: white;
    box-shadow: 0 4px 12px rgba(var(--primary-color-rgb), 0.3);
}

.nav-item.active::before {
    content: '';
    position: absolute;
    left: -20px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 40px;
    background: var(--primary-color);
    border-radius: 0 4px 4px 0;
}

.nav-icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 12px;
    vertical-align: middle;
}

/* CONTENT AREA */
.profile-content {
    flex: 1;
    padding: 40px;
    background: white;
}

.content-section {
    display: none;
}

.content-section.active {
    display: block;
    animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.section-header {
    margin-bottom: 32px;
    padding-bottom: 20px;
    border-bottom: 2px solid #f1f5f9;
}

.section-title {
    font-size: 28px;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 8px;
}

.section-description {
    color: #64748b;
    font-size: 16px;
}

/* FORM STYLING */
.profile-form .form-group {
    margin-bottom: 24px;
}

.profile-form label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-color);
    font-size: 14px;
}

.profile-form input,
.profile-form textarea,
.profile-form select {
    width: 100%;
    padding: 16px;
    border-radius: 12px;
    border: 2px solid #e2e8f0;
    background: white;
    font-size: 15px;
    transition: all 0.3s ease;
}

.profile-form input:focus,
.profile-form textarea:focus,
.profile-form select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb), 0.1);
}

.profile-form textarea {
    min-height: 120px;
    resize: vertical;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
}

.form-hint {
    font-size: 13px;
    color: #64748b;
    margin-top: 6px;
}

/* BUTTONS */
.btn {
    padding: 14px 28px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 15px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(var(--primary-color-rgb), 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(var(--primary-color-rgb), 0.4);
}

/* STATUS INDICATORS */
.status-badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-active {
    background: #dcfce7;
    color: #166534;
}

.status-inactive {
    background: #fee2e2;
    color: #991b1b;
}

.status-pending {
    background: #fef3c7;
    color: #92400e;
}

/* RESPONSIVE DESIGN */
@media (max-width: 1024px) {
    .profile-card {
        flex-direction: column;
        min-height: auto;
    }
    
    .profile-sidebar {
        width: 100%;
        padding: 30px 0;
    }
    
    .sidebar-nav {
        padding: 0 30px;
        display: flex;
        gap: 10px;
        overflow-x: auto;
    }
    
    .nav-item {
        white-space: nowrap;
        flex-shrink: 0;
    }
    
    .nav-item.active::before {
        display: none;
    }
}

@media (max-width: 768px) {
    .profile-hero {
        padding: 140px 0 60px;
    }
    
    .profile-header {
        flex-direction: column;
        text-align: center;
    }
    
    .avatar-image {
        width: 110px;
        height: 110px;
        font-size: 34px;
    }
    
    .profile-info h1 {
        font-size: 26px;
    }
    
    .profile-content {
        padding: 30px 20px;
    }
    
    .form-row {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 640px) {
    .profile-container {
        padding: 0 10px;
    }
    
    .sidebar-nav {
        flex-direction: column;
    }
    
    .nav-item {
        margin-bottom: 4px;
    }
}
</style>

