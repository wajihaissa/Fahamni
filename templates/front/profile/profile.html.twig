<script>
document.addEventListener('DOMContentLoaded', function() {
    // Navigation functionality
    const navItems = document.querySelectorAll('.nav-item');
    const contentSections = document.querySelectorAll('.content-section');

    function activateSection(sectionId) {
        if (!sectionId) return;
        const target = document.getElementById(sectionId);
        const targetNav = document.querySelector('.nav-item[data-section="' + sectionId + '"]');
        if (!target || !targetNav) return;
        navItems.forEach(nav => nav.classList.remove('active'));
        contentSections.forEach(section => section.classList.remove('active'));
        targetNav.classList.add('active');
        target.classList.add('active');
    }

    navItems.forEach(item => {
        item.addEventListener('click', function() {
            const sectionId = this.getAttribute('data-section');
            activateSection(sectionId);
            if (history.replaceState) {
                history.replaceState(null, '', '#' + sectionId);
            }
        });
    });

    const url = new URL(window.location.href);
    const fromQuery = url.searchParams.get('section');
    const fromHash = window.location.hash ? window.location.hash.substring(1) : '';
    activateSection(fromQuery || fromHash);

    // Form validation
    document.getElementById('personalForm').addEventListener('submit', function(e) {
        const firstName = document.getElementById('firstName').value.trim();
        const lastName = document.getElementById('lastName').value.trim();
        
        if (!firstName || !lastName) {
            e.preventDefault();
            alert('First and last names are required');
        }
    });

    const enablePasskeyBtn = document.getElementById('enablePasskeyBtn');
    const passkeyStatus = document.getElementById('passkeyStatus');
    const twoFactorStatus = document.getElementById('twoFactorStatus');
    const twoFactorStartBtn = document.getElementById('twoFactorStartBtn');
    const twoFactorSetupArea = document.getElementById('twoFactorSetupArea');
    const twoFactorQr = document.getElementById('twoFactorQr');
    const twoFactorSecretText = document.getElementById('twoFactorSecretText');
    const twoFactorSetupCode = document.getElementById('twoFactorSetupCode');
    const twoFactorConfirmBtn = document.getElementById('twoFactorConfirmBtn');
    const twoFactorDisableCode = document.getElementById('twoFactorDisableCode');
    const twoFactorDisableBtn = document.getElementById('twoFactorDisableBtn');
    const twoFactorSetupBlock = document.getElementById('twoFactorSetupBlock');
    const twoFactorDisableBlock = document.getElementById('twoFactorDisableBlock');
    const twoFactorRecoveryBox = document.getElementById('twoFactorRecoveryBox');

    function setPasskeyStatus(message, ok) {
        if (!passkeyStatus) return;
        passkeyStatus.textContent = message;
        passkeyStatus.style.color = ok ? '#166534' : '#991b1b';
    }

    function base64UrlToArrayBuffer(base64url) {
        const base64 = base64url.replace(/-/g, '+').replace(/_/g, '/');
        const pad = '='.repeat((4 - (base64.length % 4)) % 4);
        const raw = atob(base64 + pad);
        const out = new Uint8Array(raw.length);
        for (let i = 0; i < raw.length; i++) out[i] = raw.charCodeAt(i);
        return out.buffer;
    }

    function arrayBufferToBase64Url(buffer) {
        const bytes = new Uint8Array(buffer);
        let raw = '';
        for (let i = 0; i < bytes.length; i++) raw += String.fromCharCode(bytes[i]);
        return btoa(raw).replace(/\+/g, '-').replace(/\//g, '_').replace(/=+$/g, '');
    }

    if (enablePasskeyBtn) {
        enablePasskeyBtn.addEventListener('click', async function () {
            if (!window.PublicKeyCredential || !navigator.credentials) {
                setPasskeyStatus('Passkeys are not supported on this browser/device.', false);
                return;
            }

            enablePasskeyBtn.disabled = true;
            const originalText = enablePasskeyBtn.textContent;
            enablePasskeyBtn.textContent = 'Preparing...';
            setPasskeyStatus('Starting passkey registration...', true);

            try {
                const optionsRes = await fetch('{{ path('app_passkey_register_options') }}', {
                    method: 'POST',
                    headers: { 'Accept': 'application/json' },
                    credentials: 'same-origin'
                });
                const optionsData = await optionsRes.json();
                if (!optionsRes.ok || !optionsData.success) {
                    throw new Error(optionsData.message || 'Failed to load passkey options');
                }

                const publicKey = optionsData.publicKey;
                publicKey.challenge = base64UrlToArrayBuffer(publicKey.challenge);
                publicKey.user.id = base64UrlToArrayBuffer(publicKey.user.id);

                enablePasskeyBtn.textContent = 'Waiting for Face ID...';
                const credential = await navigator.credentials.create({ publicKey: publicKey });
                if (!credential) {
                    throw new Error('No passkey credential returned');
                }

                const response = credential.response;
                const publicKeyBytes = response.getPublicKey ? response.getPublicKey() : null;
                if (!publicKeyBytes) {
                    throw new Error('Your browser did not provide the public key. Use latest Chrome or Edge.');
                }

                const publicKeyPem = [
                    '-----BEGIN PUBLIC KEY-----',
                    btoa(String.fromCharCode(...new Uint8Array(publicKeyBytes))).match(/.{1,64}/g).join('\n'),
                    '-----END PUBLIC KEY-----'
                ].join('\n');

                const verifyPayload = {
                    id: credential.id,
                    publicKeyPem: publicKeyPem,
                    clientDataJSON: arrayBufferToBase64Url(response.clientDataJSON)
                };

                const verifyRes = await fetch('{{ path('app_passkey_register_verify') }}', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                    credentials: 'same-origin',
                    body: JSON.stringify(verifyPayload)
                });
                const verifyData = await verifyRes.json();
                if (!verifyRes.ok || !verifyData.success) {
                    throw new Error(verifyData.message || 'Passkey registration failed');
                }

                setPasskeyStatus('Face ID login is now enabled on this account.', true);
            } catch (err) {
                setPasskeyStatus(err.message || 'Could not register passkey.', false);
            } finally {
                enablePasskeyBtn.disabled = false;
                enablePasskeyBtn.textContent = originalText;
            }
        });
    }

    function setTwoFactorStatus(message, ok) {
        if (!twoFactorStatus) return;
        twoFactorStatus.textContent = message;
        twoFactorStatus.style.color = ok ? '#166534' : '#991b1b';
    }

    if (twoFactorStartBtn) {
        twoFactorStartBtn.addEventListener('click', async function () {
            twoFactorStartBtn.disabled = true;
            try {
                const res = await fetch('{{ path('app_2fa_setup_start') }}', {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();
                if (!res.ok || !data.success) {
                    throw new Error(data.message || 'Failed to start 2FA setup');
                }

                twoFactorSetupArea.style.display = 'block';
                twoFactorQr.src = data.qr_url;
                twoFactorSecretText.textContent = 'Secret: ' + data.secret;
                setTwoFactorStatus('Scan QR in Google Authenticator/Microsoft Authenticator, then confirm code.', true);
                if (twoFactorRecoveryBox) twoFactorRecoveryBox.style.display = 'none';
            } catch (e) {
                setTwoFactorStatus(e.message || 'Failed to start 2FA setup', false);
            } finally {
                twoFactorStartBtn.disabled = false;
            }
        });
    }

    if (twoFactorConfirmBtn) {
        twoFactorConfirmBtn.addEventListener('click', async function () {
            const code = (twoFactorSetupCode.value || '').trim();
            if (!code) {
                setTwoFactorStatus('Enter your authenticator code first.', false);
                return;
            }

            twoFactorConfirmBtn.disabled = true;
            try {
                const formData = new FormData();
                formData.append('code', code);
                const res = await fetch('{{ path('app_2fa_setup_confirm') }}', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin',
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();
                if (!res.ok || !data.success) {
                    throw new Error(data.message || 'Failed to enable 2FA');
                }

                twoFactorSetupBlock.style.display = 'none';
                twoFactorDisableBlock.style.display = 'block';
                setTwoFactorStatus('Status: Enabled', true);

                if (twoFactorRecoveryBox && data.recovery_codes && data.recovery_codes.length) {
                    twoFactorRecoveryBox.style.display = 'block';
                    twoFactorRecoveryBox.textContent = 'Recovery codes (save now): ' + data.recovery_codes.join(', ');
                }
            } catch (e) {
                setTwoFactorStatus(e.message || 'Failed to enable 2FA', false);
            } finally {
                twoFactorConfirmBtn.disabled = false;
            }
        });
    }

    if (twoFactorDisableBtn) {
        twoFactorDisableBtn.addEventListener('click', async function () {
            const code = (twoFactorDisableCode.value || '').trim();
            if (!code) {
                setTwoFactorStatus('Enter authenticator/recovery code to disable 2FA.', false);
                return;
            }

            twoFactorDisableBtn.disabled = true;
            try {
                const formData = new FormData();
                formData.append('code', code);
                const res = await fetch('{{ path('app_2fa_disable') }}', {
                    method: 'POST',
                    body: formData,
                    credentials: 'same-origin',
                    headers: { 'Accept': 'application/json' }
                });
                const data = await res.json();
                if (!res.ok || !data.success) {
                    throw new Error(data.message || 'Failed to disable 2FA');
                }

                twoFactorDisableBlock.style.display = 'none';
                twoFactorSetupBlock.style.display = 'block';
                twoFactorSetupArea.style.display = 'none';
                if (twoFactorRecoveryBox) twoFactorRecoveryBox.style.display = 'none';
                setTwoFactorStatus('Status: Disabled', true);
            } catch (e) {
                setTwoFactorStatus(e.message || 'Failed to disable 2FA', false);
            } finally {
                twoFactorDisableBtn.disabled = false;
            }
        });
    }
});
</script>

