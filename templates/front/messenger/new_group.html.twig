{% extends 'front/base_front.html.twig' %}

{% block title %}Nouveau groupe - FAHIMNI Messenger{% endblock %}
{% block current_page %}messenger{% endblock %}
{% block body_class %}page-messenger{% endblock %}

{% block stylesheets %}
<style>{% include 'front/messenger/_messenger_styles.html.twig' %}</style>
{% endblock %}

{% block content %}
<div class="container messenger-page new-group-page">
    <div class="new-group-container">
        {# En-tête avec bouton retour #}
        <div class="new-group-header-modern">
            <div class="header-top">
                <a href="{{ path('app_messenger_index') }}" class="back-button" title="Retour aux messages">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1>Nouveau groupe</h1>
            </div>
            <p class="subtitle">Créez un groupe de discussion avec vos contacts</p>
        </div>

        <form method="post" action="{{ path('app_messenger_new_group') }}" id="groupForm">
            {# Notification de pré-sélection #}
            {% if preselected_names is defined and preselected_names|length > 0 %}
            <div class="preselected-notice">
                <div class="notice-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div class="notice-content">
                    <strong>{{ preselected_names|join(', ') }}</strong> 
                    {% if preselected_names|length == 1 %}a été ajouté(e){% else %}ont été ajoutés{% endif %} 
                    automatiquement depuis la conversation.
                </div>
            </div>
            {% endif %}

            {# Nom du groupe #}
            <div class="form-section">
                <div class="section-header">
                    <i class="fas fa-tag section-icon"></i>
                    <h2>Nom du groupe</h2>
                    <span class="optional-badge">Optionnel</span>
                </div>
                <div class="input-group">
                    <input type="text"
                           id="groupTitle"
                           name="title"
                           class="form-input"
                           placeholder="Ex : Groupe de révision Math, Projet web...">
                    <div class="input-hint">
                        <i class="fas fa-lightbulb"></i>
                        Si vous laissez vide, le nom sera généré automatiquement à partir des participants.
                    </div>
                </div>
            </div>

            {# Barre de recherche des participants #}
            <div class="form-section">
                <div class="section-header">
                    <i class="fas fa-users section-icon"></i>
                    <h2>Participants</h2>
                    <span class="counter-badge" id="selectedCounter">0 sélectionné</span>
                </div>
                
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" 
                           id="participantSearch" 
                           class="search-input" 
                           placeholder="Rechercher un participant..."
                           autocomplete="off">
                    <button type="button" 
                            class="clear-search-btn" 
                            id="clearParticipantSearch" 
                            style="display: none;"
                            title="Effacer">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                {# Liste des participants #}
                <div class="participants-list" id="participantsList">
                    {% if users|length > 0 %}
                        {% for u in users %}
                            {% set is_preselected = preselected_ids is defined and (u.id in preselected_ids) %}
                            <label class="participant-card" data-username="{{ u.FullName|lower }}" data-email="{{ u.email|lower }}">
                                <div class="participant-info">
                                    <div class="participant-avatar">
                                        <span class="avatar-initials">{{ u.FullName|slice(0, 2)|upper }}</span>
                                        {% if u.isStatus|default(false) %}
                                            <span class="online-badge"></span>
                                        {% endif %}
                                    </div>
                                    <div class="participant-details">
                                        <span class="participant-name">{{ u.FullName }}</span>
                                        <span class="participant-email">{{ u.email }}</span>
                                    </div>
                                </div>
                                <input type="checkbox"
                                       class="participant-checkbox"
                                       name="participants[]"
                                       value="{{ u.id }}"
                                       {% if is_preselected %}checked{% endif %}>
                                <span class="custom-checkbox">
                                    <i class="fas fa-check"></i>
                                </span>
                            </label>
                        {% endfor %}
                    {% else %}
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="fas fa-user-friends"></i>
                            </div>
                            <p>Aucun utilisateur disponible pour créer un groupe.</p>
                        </div>
                    {% endif %}
                </div>

                {# Message "Aucun résultat" #}
                <div class="no-results" id="noParticipantResults" style="display: none;">
                    <i class="fas fa-search"></i>
                    <p>Aucun participant ne correspond à votre recherche.</p>
                </div>

                {# Avertissement minimum participants #}
                <div class="validation-notice" id="validationNotice">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span id="validationText">Vous devez sélectionner au moins 2 participants pour créer un groupe.</span>
                </div>

                <div class="participants-hint">
                    <i class="fas fa-info-circle"></i>
                    Vous serez automatiquement ajouté au groupe en tant qu'administrateur.
                </div>
            </div>

            {# Actions #}
            <div class="form-actions">
                <button type="submit" id="submitBtn" class="btn-primary" disabled>
                    <i class="fas fa-users"></i>
                    Créer le groupe
                </button>
                <a href="{{ path('app_messenger_index') }}" class="btn-secondary">
                    <i class="fas fa-times"></i>
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>

<style>
